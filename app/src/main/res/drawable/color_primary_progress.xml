<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/neutral_light_200"
                android:centerY="0.75"
                android:endColor="@color/neutral_light_200"
                android:startColor="@color/neutral_light_200" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/neutral_light_500"
                    android:centerY="0.75"
                    android:endColor="@color/neutral_light_500"
                    android:startColor="@color/neutral_light_500" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/neutral_light_500"
                    android:startColor="@color/neutral_light_500" />
            </shape>
        </clip>
    </item>

</layer-list>