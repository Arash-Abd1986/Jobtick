<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    tools:context=".activities.AddBankAccountActivity">

    <LinearLayout
        android:id="@+id/linearToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <include layout="@layout/view_back_button" />

        <com.jobtick.TextView.TextViewMedium
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sp"
            android:text="@string/add_bank_account"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_18sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lyt_btn_add_bank_account"
        android:layout_below="@+id/linearToolbar"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/payment_page_margin_top">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/payment_entry_box_spacing"
                android:background="@drawable/rectangle_card_round_corners_outlined"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingBottom="@dimen/payment_entry_box_padding_bottom">


                <com.jobtick.TextView.TextViewSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/payment_entry_box_title_margin_top"
                    android:text="@string/account_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sp" />


                <com.jobtick.EditText.EditTextRegular
                    android:id="@+id/edt_account_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/payment_entry_box_spacing"
                    android:background="@null"
                    android:gravity="center_vertical"
                    tools:text="@string/account_name"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/payment_entry_box_spacing"
                android:background="@drawable/rectangle_card_round_corners_outlined"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingBottom="@dimen/payment_entry_box_padding_bottom"
                >


                <com.jobtick.TextView.TextViewSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/payment_entry_box_title_margin_top"
                    android:text="BSB"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sp" />


                <com.jobtick.EditText.EditTextRegular
                    android:id="@+id/edt_bsb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/payment_entry_box_spacing"
                    android:background="@null"
                    android:gravity="center_vertical"
                    tools:text="@string/bsb"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/payment_entry_box_spacing"
                android:paddingBottom="@dimen/payment_entry_box_padding_bottom"
                android:background="@drawable/rectangle_card_round_corners_outlined"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large">


                <com.jobtick.TextView.TextViewSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/payment_entry_box_title_margin_top"
                    android:inputType="number"
                    android:text="@string/account_number"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sp" />


                <com.jobtick.EditText.EditTextRegular
                    android:id="@+id/edt_account_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/payment_entry_box_spacing"
                    android:background="@null"
                    android:gravity="center_vertical"
                    tools:text="@string/account_number"
                    android:inputType="number"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lyt_btn_add_bank_account"
        style="@style/materialButton.medium"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/margin_bottom_button"
        android:text="@string/add_bank_account"
        android:textColor="@color/white" />

</RelativeLayout>