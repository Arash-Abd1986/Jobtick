<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey"
    android:orientation="vertical"
    tools:context=".cancellations.CancellationRequestActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backgroundLightGrey"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Cancellation Request" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:elevation="@dimen/spacing_large"
            app:cardCornerRadius="@dimen/spacing_middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <com.jobtick.text_view.TextViewRegular
                    android:id="@+id/txt_username_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nathan Fox required to cancel this task on 16 Mar. 2020 23:05."
                    android:textColor="@color/grey_40"
                    android:textSize="@dimen/_12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_large" />

                <com.jobtick.text_view.TextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Once you accept the request, the payment secured will be refunded."
                    android:textColor="@color/grey_40"
                    android:textSize="@dimen/_12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/img_user_avtar"
                            android:layout_width="@dimen/_60dp"
                            android:layout_height="@dimen/_60dp"
                            android:src="@drawable/pic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/spacing_middle"
                            android:layout_toStartOf="@+id/txt_amount"
                            android:layout_toEndOf="@+id/img_user_avtar"
                            android:orientation="vertical">

                            <com.jobtick.text_view.TextViewBold
                                android:id="@+id/txt_post_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:text="Clean my two bedroom apartment"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_14sp"
                                android:textStyle="bold" />


                            <com.jobtick.text_view.TextViewRegular
                                android:id="@+id/txt_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="Nathan Fox"
                                android:textColor="@color/grey_40"
                                android:textSize="@dimen/_12sp" />

                        </LinearLayout>


                        <com.jobtick.text_view.TextViewBold
                            android:id="@+id/txt_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="$ 100"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_20sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_large" />

                    <com.jobtick.text_view.TextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reason For Cancellation"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_middle" />

                    <com.jobtick.text_view.TextViewBold
                        android:id="@+id/txt_cancellation_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="“I no longer need the job to be done”"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/lyt_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_mlarge"
                        android:orientation="vertical">


                        <com.jobtick.text_view.TextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comments"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_middle" />

                        <com.jobtick.text_view.TextViewRegular
                            android:id="@+id/txt_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="officia aliqua tempor fugiat elit non Lorem cillum et proident nulla incididunt officia incididunt veniam occaecat in esse elit"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_14sp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_smlarge"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_smlarge"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:orientation="vertical"
            android:padding="15dp">

            <com.jobtick.text_view.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You will be charged a Cancellation Fee if the request is accepted."
                android:textColor="@color/grey_40"
                android:textSize="@dimen/_12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.jobtick.text_view.TextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/txt_cancellation_fee"
                    android:text="Cancellation Fee"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />


                <com.jobtick.text_view.TextViewBold
                    android:id="@+id/txt_cancellation_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="$ 10"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_22sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <com.jobtick.text_view.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn more about our Policy and Fees"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>