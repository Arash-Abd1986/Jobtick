<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundLightGrey"
    android:orientation="vertical"
    tools:context=".cancellations.CancellationWorkerActivity">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_submit"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:orientation="vertical">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_one_reason_for_your_request"
                android:textAppearance="@style/materialText_500_14"
                android:textColor="@color/colorPrimary" />


            <RadioGroup
                android:id="@+id/rg_reason_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_reason_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:button="@drawable/radio_button_selector_size_16"
                    android:paddingStart="@dimen/spacing_large"
                    android:text="@string/reason_worker_1"
                    android:textAppearance="@style/materialText_400_14" />

                <RadioButton
                    android:id="@+id/rb_reason_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:button="@drawable/radio_button_selector_size_16"
                    android:paddingStart="@dimen/spacing_large"
                    android:text="@string/reason_worker_2"
                    android:textAppearance="@style/materialText_400_14" />

                <RadioButton
                    android:id="@+id/rb_reason_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:button="@drawable/radio_button_selector_size_16"
                    android:paddingStart="@dimen/spacing_large"
                    android:text="@string/reason_worker_3"
                    android:textAppearance="@style/materialText_400_14" />

                <RadioButton
                    android:id="@+id/rb_reason_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:button="@drawable/radio_button_selector_size_16"
                    android:paddingStart="@dimen/spacing_large"
                    android:text="@string/reason_worker_4"
                    android:textAppearance="@style/materialText_400_14" />

                <RadioButton
                    android:id="@+id/rb_reason_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:button="@drawable/radio_button_selector_size_16"
                    android:paddingStart="@dimen/spacing_large"
                    android:text="@string/reason_worker_4"
                    android:textAppearance="@style/materialText_400_14" />

            </RadioGroup>

            <com.jobtick.widget.ExtendedCommentText
                android:id="@+id/comment_box"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                app:eTitle="@string/comments_optional"
                app:eMaxCharSize="100"
                app:eIsMandatory="false"/>


            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_500_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="You will be charged a Cancellation Fee once the request has been accepted."
                android:textColor="@color/grey_70" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/materialText_400_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/txt_cancellation_fee"
                    android:text="Cancellation Fee"
                    android:textColor="@color/textColor" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_cancellation_fee"
                    style="@style/materialText_600_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="-$ 20"
                    android:textColor="@color/colorTaskOverDue" />


            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_400_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Learn more about our Policy and Fees"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit"
        style="@style/materialButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_large"
        android:text="@string/submit"
        android:enabled="false"/>

</RelativeLayout>