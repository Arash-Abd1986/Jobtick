<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/grey_100">

            <ImageView
                android:id="@+id/iv_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_back" />

            <com.jobtick.TextView.TextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_backbutton"
                android:text="@string/categories"
                android:layout_marginStart="-4dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18sp">

            </com.jobtick.TextView.TextViewMedium>
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_task_category">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/lyt_search_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="@dimen/spacing_xxxlarge"
        android:backgroundTint="@color/white"
        android:clipToPadding="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="@dimen/_3sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_search">

            </ImageView>

            <com.jobtick.TextView.TextViewRegular
                android:id="@+id/edt_search_categoreis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@id/iv_back"
                android:background="@null"
                android:hint="Search Categories"
                android:textColor="@color/grey_70"
                android:textColorHint="@color/grey_70"
                android:textSize="@dimen/_12sp">

            </com.jobtick.TextView.TextViewRegular>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


