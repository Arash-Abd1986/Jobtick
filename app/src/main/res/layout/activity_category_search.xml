<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:background="@drawable/rectangle_button_round_corners_outlined"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/todo">

        </ImageView>

        <com.google.android.material.textfield.TextInputEditText
            style="@style/materialText_400_12"
            android:id="@+id/edt_search_categoreis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:hint="@string/search_categories"
            android:textColor="@color/grey_70"
            android:textColorHint="@color/grey_70"/>

    </LinearLayout>


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sp"
            android:layout_marginTop="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_20sp"
            tools:listitem="@layout/item_category_search"/>


        <RelativeLayout
            android:id="@+id/empty_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_no_search_found"
                    android:contentDescription="@string/todo"/>


                <com.google.android.material.textview.MaterialTextView
                    style="@style/materialText_400_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sp"
                    android:layout_marginBottom="@dimen/_15sp"
                    android:gravity="center"
                    android:text="@string/we_didn_t_find_any_results_for_your_search"/>



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lyt_search_new"
                    style="@style/materialButton.outlined"
                    android:layout_width="245dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:text="@string/start_a_new_search"
                    android:textColor="@color/blueButtons"
                    android:textSize="@dimen/_14sp"
                    app:strokeColor="@color/blueButtons"
                    app:strokeWidth="@dimen/outline_normal"
                    android:gravity="center"
                    android:layout_gravity="center"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lyt_categories"
                    style="@style/materialButton"
                    android:layout_width="245dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="@dimen/_16sp"
                    android:text="@string/categories"
                    android:textColor="@color/white" />


            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>


</LinearLayout>