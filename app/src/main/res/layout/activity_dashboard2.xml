<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    tools:context=".activities.Dashboard2Activity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Dashboard" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:padding="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:elevation="@dimen/spacing_small"
                    app:cardCornerRadius="@dimen/spacing_small">

                    <RadioGroup
                        android:id="@+id/rg_ticker_poster"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rb_as_ticker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_left_tab"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:paddingStart="@dimen/spacing_large"
                            android:paddingEnd="@dimen/spacing_large"
                            android:text="As A Ticker"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/radio_btn" />

                        <RadioButton
                            android:id="@+id/rb_as_poster"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_right_tab"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingStart="@dimen/spacing_large"
                            android:paddingEnd="@dimen/spacing_large"
                            android:text="As A Poster"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/radio_btn" />

                    </RadioGroup>


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:weightSum="3">


                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sp"
                            android:layout_weight="1">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_task_background"
                                android:layout_width="match_parent"
                                android:layout_height="98dp"

                                android:layout_marginTop="@dimen/_10sp"
                                android:layout_marginEnd="@dimen/_2sp"
                                card_view:cardBackgroundColor="@color/colorTaskOffer"
                                card_view:cardCornerRadius="@dimen/spacing_middle"></androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginBottom="@dimen/spacing_medium"
                                card_view:cardCornerRadius="@dimen/spacing_middle">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <com.jobtick.TextView.TextViewMedium

                                        android:id="@+id/txt_awaiting_for_offer"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_above="@id/txtOffer"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/_12sp"
                                        android:text="25"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_22sp" />


                                    <com.jobtick.TextView.TextViewMedium
                                        android:id="@+id/txtOffer"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="@dimen/_5sp"
                                        android:gravity="center"
                                        android:paddingStart="@dimen/_10sp"

                                        android:paddingEnd="@dimen/_10sp"
                                        android:text="Awaiting for \n offer "
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_12sp" />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sp"
                            android:layout_weight="1">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_assigned"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginTop="@dimen/_10sp"
                                android:layout_marginEnd="@dimen/_2sp"
                                card_view:cardBackgroundColor="@color/colorTaskAssigned"
                                card_view:cardCornerRadius="@dimen/spacing_middle"></androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginBottom="@dimen/spacing_medium"
                                card_view:cardCornerRadius="@dimen/spacing_middle">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <com.jobtick.TextView.TextViewMedium

                                        android:id="@+id/txt_assigned"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_above="@id/txtlblAssigned"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/_12sp"
                                        android:text="25"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_22sp" />


                                    <com.jobtick.TextView.TextViewMedium
                                        android:id="@+id/txtlblAssigned"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:paddingStart="@dimen/_10sp"
                                        android:paddingEnd="@dimen/_10sp"
                                        android:text="Assigned \n "
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_12sp" />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sp"
                            android:layout_weight="1">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_overdue"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginTop="@dimen/_10sp"
                                android:layout_marginEnd="@dimen/_2sp"
                                card_view:cardBackgroundColor="@color/colorTaskOverDue"
                                card_view:cardCornerRadius="@dimen/spacing_middle"></androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginBottom="@dimen/spacing_medium"
                                card_view:cardCornerRadius="@dimen/spacing_middle">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <com.jobtick.TextView.TextViewMedium

                                        android:id="@+id/txt_overdue"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_above="@id/txtlblOverdue"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/_12sp"
                                        android:text="25"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_22sp" />


                                    <com.jobtick.TextView.TextViewMedium
                                        android:id="@+id/txtlblOverdue"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:paddingStart="@dimen/_10sp"
                                        android:paddingEnd="@dimen/_10sp"
                                        android:text="Overdue \n "
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_12sp" />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>
                        </FrameLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:weightSum="3">


                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sp"
                            android:layout_weight="1">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_release_money"
                                android:layout_width="match_parent"
                                android:layout_height="98dp"

                                android:layout_marginTop="@dimen/_10sp"
                                android:layout_marginEnd="@dimen/_2sp"
                                card_view:cardBackgroundColor="@color/colorReleasedMoney"
                                card_view:cardCornerRadius="@dimen/spacing_middle"></androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginBottom="@dimen/spacing_medium"
                                card_view:cardCornerRadius="@dimen/spacing_middle">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <com.jobtick.TextView.TextViewMedium

                                        android:id="@+id/txt_released_money"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_above="@id/txtReleasedMoney"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/_12sp"
                                        android:text="25"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_22sp" />


                                    <com.jobtick.TextView.TextViewMedium
                                        android:id="@+id/txtReleasedMoney"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="@dimen/_5sp"
                                        android:gravity="center"
                                        android:paddingStart="@dimen/_10sp"
                                        android:paddingEnd="@dimen/_10sp"
                                        android:text="Released \n Money "
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_12sp" />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sp"
                            android:layout_weight="1">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_task_background2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginTop="@dimen/_10sp"
                                android:layout_marginEnd="@dimen/_2sp"
                                card_view:cardBackgroundColor="@color/colorTaskCompleted"
                                card_view:cardCornerRadius="@dimen/spacing_middle"></androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginBottom="@dimen/spacing_medium"
                                card_view:cardCornerRadius="@dimen/spacing_middle">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <com.jobtick.TextView.TextViewMedium

                                        android:id="@+id/txt_completed"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_above="@id/txtlblCompleted"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/_12sp"
                                        android:text="25"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_22sp" />


                                    <com.jobtick.TextView.TextViewMedium
                                        android:id="@+id/txtlblCompleted"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:paddingStart="@dimen/_10sp"
                                        android:paddingEnd="@dimen/_10sp"
                                        android:text="Completed \n "
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_12sp" />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sp"
                            android:layout_weight="1">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_cancelled"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_10sp"
                                android:layout_marginEnd="@dimen/_2sp"
                                card_view:cardBackgroundColor="@color/colorTaskCancelled"
                                card_view:cardCornerRadius="@dimen/spacing_middle"></androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginBottom="@dimen/spacing_medium"
                                card_view:cardCornerRadius="@dimen/spacing_middle">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <com.jobtick.TextView.TextViewMedium

                                        android:id="@+id/txtCancelled"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_above="@id/txtlblCancelled"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/_12sp"
                                        android:text="25"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_22sp" />


                                    <com.jobtick.TextView.TextViewMedium
                                        android:id="@+id/txtlblCancelled"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:paddingStart="@dimen/_10sp"
                                        android:paddingEnd="@dimen/_10sp"
                                        android:text="Cancelled \n "
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_12sp" />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>
                        </FrameLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle"
                app:cardCornerRadius="@dimen/spacing_middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_large"
                    android:paddingTop="@dimen/spacing_middle"
                    android:paddingEnd="@dimen/spacing_large"
                    android:paddingBottom="@dimen/spacing_large">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:layout_marginEnd="@dimen/spacing_medium"
                            android:clipToPadding="false"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="@dimen/_5sp"
                            app:cardElevation="@dimen/_5sp">

                            <com.jobtick.TextView.TextViewRegular
                                android:id="@+id/txt_btn_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:padding="@dimen/spacing_medium"
                                android:paddingStart="@dimen/spacing_large"
                                android:paddingEnd="@dimen/spacing_large"
                                android:text="Profile"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:clipToPadding="false"
                            app:cardBackgroundColor="@color/colorF0F0F0"
                            app:cardCornerRadius="@dimen/_5sp"
                            app:cardElevation="5dp">


                            <com.jobtick.TextView.TextViewRegular
                                android:id="@+id/txt_btn_static_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:padding="@dimen/spacing_medium"
                                android:text="Static Date "
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_12sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">


                                <com.mikhaellopez.circularimageview.CircularImageView
                                    android:id="@+id/img_user_avatar"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"

                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/pic" />


                                <ImageView
                                    android:id="@+id/img_account_shield"
                                    android:layout_width="@dimen/_20sp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="@dimen/_5sp"
                                    android:layout_weight="1"

                                    android:src="@drawable/ic_shield" />



                            </RelativeLayout>

                            <View
                                android:layout_width="@dimen/spacing_large"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <com.jobtick.TextView.TextViewSemiBold
                                    android:id="@+id/txt_user_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="Ammy Stevenson"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_14sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/spacing_medium" />

                                <com.jobtick.TextView.TextViewRegular
                                    android:id="@+id/txt_account_level"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="Designer Level 2"
                                    android:textColor="@color/grey_40"
                                    android:textSize="@dimen/_10sp" />


                            </LinearLayout>

                            <ImageView
                                android:id="@+id/img_account_level"
                                android:layout_width="25dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/_8sp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_user_level" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_xlarge" />


                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Profile Status"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_middle" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <com.jobtick.TextView.TextViewRegular
                                    android:id="@+id/txt_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Account"
                                    android:textColor="@color/textColor" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/spacing_middle" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:orientation="horizontal">

                                        <View
                                            android:id="@+id/view_account1"

                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/spacing_small"
                                            android:layout_weight="1"
                                            android:background="@color/grayActive" />

                                        <View
                                            android:id="@+id/view_account2"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/spacing_small"
                                            android:layout_weight="1"
                                            android:background="@color/grayActive" />


                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/iv_green_account"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/ic_progress_checked"
                                        android:tint="@color/grayActive" />

                                </RelativeLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <com.jobtick.TextView.TextViewRegular
                                    android:id="@+id/txt_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Payment"
                                    android:textColor="@color/textColor" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/spacing_middle" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:orientation="horizontal">

                                        <View
                                            android:id="@+id/view_payment1"
                                            android:layout_width="44dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="#EFEFEF" />

                                        <View
                                            android:id="@+id/view_payment2"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/spacing_small"
                                            android:layout_weight="1"
                                            android:background="#EFEFEF" />


                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/iv_payment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/ic_progress_path"

                                        />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <com.jobtick.TextView.TextViewRegular
                                    android:id="@+id/txt_skills"
                                    android:layout_width="wrap_content"
