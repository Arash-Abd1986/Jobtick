<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".activities.FiltersActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_cancel"
        app:title="Filters"
        android:background="@color/background"
        app:contentInsetStartWithNavigation="0dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:elevation="@dimen/spacing_middle"
        app:cardCornerRadius="@dimen/spacing_middle">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <com.jobtick.TextView.TextViewSemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Be Done"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_middle" />

                <RadioGroup
                    android:id="@+id/rg_filters"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:textColor="@color/radio_btn"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:id="@+id/rb_remotely"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_button_tab"
                        android:button="@null"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:text="@string/remotely"
                        android:textSize="@dimen/_14sp" />

                    <RadioButton
                        android:textColor="@color/radio_btn"
                        android:id="@+id/rb_in_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_button_tab"
                        android:button="@null"
                        android:gravity="center"
                        android:checked="true"
                        android:text="@string/in_person"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_14sp" />

                    <RadioButton

                        android:layout_marginStart="@dimen/spacing_middle"
                        android:textColor="@color/radio_btn"
                        android:id="@+id/rb_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_button_tab"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/all"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_14sp" />


                </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_middle" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.jobtick.widget.NonSwipeableViewPager
        android:background="@color/background"
        android:layout_below="@+id/card_selection_view"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>