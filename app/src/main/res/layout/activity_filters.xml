<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    tools:context=".activities.FiltersActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grey_100"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_cancel"
        app:title="Filters" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:background="@color/grey_100"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/rg_filters"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_tab_white"
            android:orientation="horizontal"
            android:padding="@dimen/_5sp"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_remotely"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_middle"
                android:layout_weight="1"
                android:background="@drawable/radio_button_tab"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/remotely"

                android:textColor="@color/radio_btn"
                android:textSize="@dimen/_14sp" />

            <RadioButton
                android:id="@+id/rb_in_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radio_button_tab"
                android:button="@null"
                android:gravity="center"
                android:text="@string/in_person"
                android:textColor="@color/radio_btn"
                android:textSize="@dimen/_14sp" />

            <RadioButton

                android:id="@+id/rb_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_middle"
                android:layout_weight="1"
                android:background="@drawable/radio_button_tab"
                android:button="@null"
                android:gravity="center"
                android:text="@string/all"

                android:textColor="@color/radio_btn"
                android:textSize="@dimen/_14sp" />


        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_middle" />


    </LinearLayout>

    <com.jobtick.widget.NonSwipeableViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/card_selection_view"
        android:background="@color/grey_100"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>