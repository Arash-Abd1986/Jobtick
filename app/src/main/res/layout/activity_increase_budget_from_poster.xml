<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    >


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Payment Overview" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/card_pay"
        android:layout_below="@+id/toolbar"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle"
                app:cardCornerRadius="@dimen/spacing_middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_large">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_info"
                        android:tint="@color/colorPrimary" />

                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <com.jobtick.TextView.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your payment will be securely held until youâ€™re happy the task has been completed."
                        android:textColor="@color/grey_40"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_view_user"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle"
                app:cardCornerRadius="@dimen/spacing_middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_large">

                    <RelativeLayout
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="@dimen/_60dp">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pic" />


                        <ImageView
                            android:id="@+id/img_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"
                            android:background="@drawable/ic_correct" />


                    </RelativeLayout>


                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">


                        <com.jobtick.TextView.TextViewBold
                            android:id="@+id/txt_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Julie Grantt"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold" />

                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_post_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Clean my two bedroom apartment"
                            android:textSize="@dimen/_12sp" />


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle"
                app:cardCornerRadius="@dimen/spacing_middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">


                    <com.jobtick.TextView.TextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Budget"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/lyt_button_minus_plus"
                            android:orientation="horizontal">

                            <com.jobtick.TextView.TextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="$ "
                                android:textColor="@color/_4f4f4f"
                                android:textSize="@dimen/_18sp"
                                android:textStyle="bold" />

                            <com.jobtick.TextView.TextViewSemiBold
                                android:id="@+id/txt_budget"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:background="@null"
                                android:hint="20"
                                android:inputType="number"
                                android:textColor="@color/_4f4f4f"
                                android:textColorHint="@color/textColor"
                                android:textSize="@dimen/_18sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <com.jobtick.TextView.TextViewRegular
                                android:id="@+id/txt_btn_update_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:padding="@dimen/spacing_medium"
                                android:text="Update amount"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_14sp" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_increase_budget_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/spacing_line"
                                android:backgroundTint="@color/grey_10"
                                android:visibility="gone"
                                app:cardCornerRadius="@dimen/spacing_medium"
                                app:cardElevation="0dp">

                                <com.jobtick.EditText.EditTextSemiBold
                                    android:id="@+id/edt_increase_budget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:hint="XXX"
                                    android:inputType="number"
                                    android:padding="@dimen/spacing_medium"
                                    android:textColor="@color/_4f4f4f"
                                    android:textColorHint="@color/grey_40"
                                    android:textSize="@dimen/_14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_7sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:singleLine="true"
                            android:text="Total Cost"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold" />


                        <com.jobtick.TextView.TextViewBold
                            android:id="@+id/txt_total_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="$ 200"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_20sp"
                            android:textStyle="bold" />


                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Method"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_7sp" />

                        <RelativeLayout
                            android:id="@+id/rlt_payment_method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_brand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/visa" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/spacing_large"
                                android:layout_marginEnd="@dimen/spacing_large"
                                android:layout_toStartOf="@+id/card_update"
                                android:layout_toEndOf="@id/img_brand"
                                android:orientation="vertical">

                                <com.jobtick.TextView.TextViewBold
                                    android:id="@+id/txt_account_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:singleLine="true"
                                    android:text="**** **** **** 4949"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_16sp"
                                    android:textStyle="bold" />

                                <com.jobtick.TextView.TextViewMedium
                                    android:id="@+id/txt_expires_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:singleLine="true"
                                    android:text="Expires 06/22"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_16sp" />


                            </LinearLayout>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_update"
                                android:layout_width="@dimen/_70dp"
                                android:layout_height="@dimen/_35sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/spacing_line"
                                android:backgroundTint="@color/colorPrimary"
                                android:elevation="@dimen/spacing_middle"
                                app:cardCornerRadius="@dimen/spacing_middle">

                                <TextView
                                    android:id="@+id/txt_btn_update"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="?attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:text="UPDATE"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sp" />
                            </androidx.cardview.widget.CardView>


                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/lyt_card_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <com.stripe.android.view.CardMultilineWidget
                                android:id="@+id/card_multiline_widget"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible"></com.stripe.android.view.CardMultilineWidget>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spacing_large" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_add_payment_method"
                                android:layout_width="match_parent"
                                android:layout_height="46dp"
                                android:layout_margin="@dimen/spacing_line"
                                android:backgroundTint="@color/colorPrimary"
                                android:elevation="@dimen/spacing_middle"
                                app:cardCornerRadius="@dimen/spacing_medium">

                                <LinearLayout
                                    android:id="@+id/lyt_btn_add_payment_method"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackground"
                                    android:gravity="center">

                                    <com.jobtick.TextView.TextViewMedium
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Add Payment Method"
                                        android:textAllCaps="true"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">


                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />


                    <com.jobtick.EditText.EditTextRegular
                        android:id="@+id/edt_note"
                        android:gravity="top"
                        android:background="@null"
                        android:textSize="@dimen/_14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minHeight="@dimen/_70dp"
                        android:maxLength="500"
                        android:hint="Enter your note" />



                    <com.jobtick.EditText.EditTextRegular
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:background="@null"
                        android:textSize="@dimen/_14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:maxLength="500"
                        android:hint="Character Max 500" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_pay"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_large"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="@dimen/spacing_middle"
        app:cardCornerRadius="@dimen/spacing_medium">

        <LinearLayout
            android:id="@+id/lyt_btn_pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center">

            <com.jobtick.TextView.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PAY"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>