<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <com.jobtick.android.widget.ExtendedSettingItem
            android:id="@+id/email_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="@dimen/spacing_large"
            app:eSettingTitle="Email Notification" />

        <com.jobtick.android.widget.ExtendedSettingItem
            android:id="@+id/push_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="@dimen/spacing_large"
            app:eSettingTitle="Push Notification" />

        <com.jobtick.android.widget.ExtendedSettingItem
            android:id="@+id/sms_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="@dimen/spacing_large"
            app:eSettingTitle="SMS Notification" />

    </LinearLayout>

</LinearLayout>