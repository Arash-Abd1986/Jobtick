<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.PaymentOverviewActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Payment Overview" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/card_pay"
        android:layout_below="@+id/toolbar"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                app:cardCornerRadius="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_large">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_info"
                        android:tint="@color/colorPrimary" />

                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <com.jobtick.TextView.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your payment will be securely held until youâ€™re happy the task has been completed."
                        android:textColor="@color/grey_40"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:id="@+id/card_view_user"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                app:cardCornerRadius="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_large">

                    <RelativeLayout
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="@dimen/_60dp">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pic" />


                        <ImageView
                            android:id="@+id/img_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"
                            android:background="@drawable/ic_correct" />


                    </RelativeLayout>


                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">


                        <com.jobtick.TextView.TextViewBold
                            android:id="@+id/txt_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Julie Grantt"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold" />

                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_post_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Clean my two bedroom apartment"
                            android:textSize="@dimen/_12sp" />


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                app:cardCornerRadius="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <com.jobtick.TextView.TextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Summary"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_7sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.jobtick.TextView.TextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:singleLine="true"
                                android:text="Task Cost"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_16sp" />


                            <com.jobtick.TextView.TextViewBold
                                android:id="@+id/txt_task_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="$ 175"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_7sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.jobtick.TextView.TextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:singleLine="true"
                                android:text="Service Fee"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_16sp" />


                            <com.jobtick.TextView.TextViewBold
                                android:id="@+id/txt_service_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="$ 25"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/lyt_discount_coupon"
                            >
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_7sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.jobtick.TextView.TextViewMedium
                                    android:id="@+id/discount_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:singleLine="true"
                                    android:text="Discount"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_16sp" />

                                <com.jobtick.TextView.TextViewMedium
                                    android:background="?attr/selectableItemBackground"
                                    android:id="@+id/txt_btn_remove_coupon"
                                    android:layout_marginStart="@dimen/spacing_large"
                                    android:layout_toEndOf="@+id/discount_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:singleLine="true"
                                    android:text="(Remove)"
                                    android:textColor="@color/red_600"
                                    android:textSize="@dimen/_16sp" />

                                <com.jobtick.TextView.TextViewBold
                                    android:id="@+id/txt_discount_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:text="$ 0"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_16sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_7sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.jobtick.TextView.TextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:singleLine="true"
                                android:text="Total Cost"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />


                            <com.jobtick.TextView.TextViewBold
                                android:id="@+id/txt_total_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="$ 200"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_20sp"
                                android:textStyle="bold" />


                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Method"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_7sp" />

                        <RelativeLayout
                            android:id="@+id/rlt_payment_method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_brand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/visa" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/spacing_large"
                                android:layout_marginEnd="@dimen/spacing_large"
                                android:layout_toStartOf="@+id/card_update"
                                android:layout_toEndOf="@id/img_brand"
                                android:orientation="vertical">

                                <com.jobtick.TextView.TextViewBold
                                    android:id="@+id/txt_account_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:singleLine="true"
                                    android:text="**** **** **** 4949"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_16sp"
                                    android:textStyle="bold" />

                                <com.jobtick.TextView.TextViewMedium
                                    android:id="@+id/txt_expires_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:singleLine="true"
                                    android:text="Expires 06/22"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_16sp" />


                            </LinearLayout>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_update"
                                android:layout_width="@dimen/_70dp"
                                android:layout_height="@dimen/_35sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/spacing_line"
                                android:backgroundTint="@color/colorPrimary"
                                android:elevation="@dimen/spacing_middle"
                                app:cardCornerRadius="@dimen/spacing_middle">

                                <TextView
                                    android:textSize="@dimen/_10sp"
                                    android:id="@+id/txt_btn_update"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="?attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:text="UPDATE"
                                    android:textColor="@color/white" />
                            </androidx.cardview.widget.CardView>


                        </RelativeLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lyt_card_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">





                        <com.stripe.android.view.CardMultilineWidget
                            android:visibility="visible"
                            android:id="@+id/card_multiline_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.stripe.android.view.CardMultilineWidget>

                       <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_large"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_add_payment_method"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_margin="@dimen/spacing_line"
                            android:backgroundTint="@color/colorPrimary"
                            android:elevation="@dimen/spacing_middle"
                            app:cardCornerRadius="@dimen/spacing_medium">

                            <LinearLayout
                                android:id="@+id/lyt_btn_add_payment_method"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center">

                                <com.jobtick.TextView.TextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Add Payment Method"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lyt_remove_coupon"
                        android:layout_marginTop="@dimen/_30dp"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sp"
                            android:scaleType="centerCrop"
                            android:layout_height="@dimen/_30sp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_minus_blue" />

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="match_parent" />

                        <com.jobtick.TextView.TextViewMedium
                            android:layout_width="wrap_content"
                            android:id="@+id/txt_coupon_code"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Add Coupon"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lyt_add_coupon"
                        android:layout_marginTop="@dimen/_30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_add_primary" />

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="match_parent" />

                        <com.jobtick.TextView.TextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Add Coupon"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14sp" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_pay"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_large"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="@dimen/spacing_middle"
        app:cardCornerRadius="@dimen/spacing_medium">

        <LinearLayout
            android:id="@+id/lyt_btn_pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center">

            <com.jobtick.TextView.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PAY"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>