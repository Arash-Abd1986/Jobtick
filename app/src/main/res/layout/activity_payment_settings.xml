<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    tools:context=".activities.PaymentSettingsActivity">

    <LinearLayout
        android:id="@+id/linearToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <include layout="@layout/view_back_button"/>

        <com.jobtick.TextView.TextViewMedium
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sp"
            android:text="@string/payment_settings"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_18sp" />

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearToolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:background="@drawable/bg_white_shape"
                android:padding="4dp">

                <RadioGroup
                    android:id="@+id/rg_payments_withdrawal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.jobtick.radioButton.RadioButtonMedium
                        android:id="@+id/rb_payments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/radio_button_left_tab"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:text="@string/payment"
                        android:textColor="@color/radio_btn"
                        android:textSize="@dimen/_14sp" />

                    <com.jobtick.radioButton.RadioButtonMedium
                        android:id="@+id/rb_withdrawal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/radio_button_right_tab"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:text="@string/withdrawal"
                        android:textColor="@color/radio_btn"
                        android:textSize="@dimen/_14sp" />

                </RadioGroup>
            </FrameLayout>


            <LinearLayout
                android:id="@+id/linear_bank_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linear_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xxxlarge"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bank"
                        android:visibility="gone">

                    </ImageView>

                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xlarge"
                        android:gravity="center"
                        android:text="No bank details"

                        android:visibility="gone">


                    </com.jobtick.TextView.TextViewSemiBold>


                    <com.jobtick.TextView.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:gravity="center"
                        android:text="Add  card details to transfer \n money to split balance"
                        android:visibility="gone">

                    </com.jobtick.TextView.TextViewRegular>


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_bank_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/spacing_middle"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/spacing_middle">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_large"
                            android:layout_weight="0.80"
                            android:orientation="vertical">

                            <com.jobtick.TextView.TextViewSemiBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:inputType="number"
                                android:text="Bank account details"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12sp"

                                android:textStyle="bold" />


                            <com.jobtick.TextView.TextViewSemiBold
                                android:id="@+id/txt_account_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:layout_marginBottom="@dimen/spacing_small"
                                android:inputType="number"
                                android:text="Account Number"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_12sp"

                                android:textStyle="bold" />

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/ic_delete_bank_account"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.20"
                            android:padding="@dimen/_5sp"
                            android:src="@drawable/ic_delete">

                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_billing_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_large"

                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/spacing_middle"
                    android:visibility="gone"

                    app:cardCornerRadius="@dimen/spacing_middle">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_middle"
                            android:layout_weight="0.80"
                            android:orientation="vertical">

                            <com.jobtick.TextView.TextViewSemiBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:inputType="number"
                                android:text="Billing Address"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12sp"

                                android:textStyle="bold" />


                            <com.jobtick.TextView.TextViewSemiBold
                                android:id="@+id/txt_Billing_Address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:layout_marginBottom="@dimen/spacing_small"
                                android:inputType="number"
                                android:text="Account Number"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_12sp"

                                android:textStyle="bold" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ic_delete_billing_account"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.20"
                            android:padding="@dimen/_5sp"
                            android:src="@drawable/ic_delete">

                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_credit_card"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">


                    <RelativeLayout
                        android:id="@+id/rlt_btn_add_credit_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:paddingStart="@dimen/spacing_mlarge"
                        android:paddingEnd="@dimen/spacing_mxlarge">

                        <ImageView
                            android:id="@+id/img_add_credit_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/spacing_large"
                            android:src="@drawable/ic_add_primary"
                            app:tint="@color/colorPrimary" />

                        <com.jobtick.TextView.TextViewMedium
                            android:id="@+id/txt_add_credit_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/img_add_credit_card"
                            android:gravity="center"
                            android:text="@string/add_credit_card"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_13sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_bank_account"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">


                    <RelativeLayout
                        android:id="@+id/rlt_btn_add_bank_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:paddingStart="@dimen/spacing_mlarge"
                        android:paddingEnd="@dimen/spacing_mxlarge">

                        <ImageView
                            android:id="@+id/img_add_bank_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/spacing_large"
                            android:src="@drawable/ic_add_primary"
                            app:tint="@color/colorPrimary" />

                        <com.jobtick.TextView.TextViewMedium
                            android:id="@+id/txt_add_bank_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/img_add_bank_account"
                            android:gravity="center"
                            android:text="@string/add_bank_account"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_13sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_billing_address"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">


                    <RelativeLayout
                        android:id="@+id/rlt_btn_add_billing_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:paddingStart="@dimen/spacing_mlarge"
                        android:paddingEnd="@dimen/spacing_mxlarge">

                        <ImageView
                            android:id="@+id/img_add_billing_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/spacing_large"
                            android:src="@drawable/ic_add_primary"
                            app:tint="@color/colorPrimary" />

                        <com.jobtick.TextView.TextViewMedium
                            android:id="@+id/txt_add_billing_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/img_add_billing_address"
                            android:gravity="center"
                            android:text="@string/add_billing_address"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_13sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>