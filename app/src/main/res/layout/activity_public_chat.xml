<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.PublicChatActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Offer Chat" />


<!--    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="@id/lyt_create_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar">-->

        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:layout_above="@id/lyt_create_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/layout_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_middle"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/rlt_profile"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="@dimen/_60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pic" />


                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:layout_marginBottom="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:background="@drawable/ic_level_1" />


                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:layout_marginBottom="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:id="@+id/iv_verified_account"
                            android:background="@drawable/ic_correct" />


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/lyt_budget_status"
                        android:layout_toEndOf="@+id/rlt_profile"
                        android:orientation="vertical">


                        <com.jobtick.TextView.TextViewBold
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Nathan Fox"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatRatingBar
                                android:id="@+id/ratingbar_worker"
                                style="@style/Yellow.Small.AppCompatRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:theme="@style/Yellow.Small.AppCompatRatingBar" />


                            <com.jobtick.TextView.TextViewRegular
                                android:id="@+id/txt_rating_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_completion_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0% Completion Rate"
                            android:textColor="@color/_4f4f4f"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lyt_budget_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical">

                        <com.jobtick.TextView.TextViewBold
                            android:id="@+id/txt_budget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="$ 200"

                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_18sp"
                            android:textStyle="bold" />

                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_accept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_rounded_white"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:paddingStart="@dimen/spacing_middle"
                            android:paddingTop="@dimen/spacing_medium"
                            android:paddingEnd="@dimen/spacing_middle"
                            android:paddingBottom="@dimen/spacing_medium"
                            android:text="ACCEPT"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/txt_created_date"
                        android:text="Message"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />


                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_created_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="21 min. ago"
                        android:textColor="@color/grey_40"
                        android:textSize="@dimen/_12sp" />

                </RelativeLayout>

                <com.jobtick.TextView.TextViewRegular
                    android:id="@+id/txt_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="adipisicing adipisicing commodo Lorem enim si adipis adipisicing commodo Lorem enim si..."
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_12sp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_live_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_line"
                    android:layout_marginTop="@dimen/spacing_line"
                    android:layout_marginEnd="@dimen/spacing_line"
                    android:layout_marginBottom="@dimen/spacing_line"
                    android:elevation="@dimen/spacing_mlarge"
                    app:cardCornerRadius="@dimen/spacing_middle">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_offer_on_task"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image_16" />

                        <ImageView
                            android:id="@+id/img_btn_play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_play_circle" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/lyt_btn_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_small">

                        <ImageView
                            android:layout_width="@dimen/_16sp"
                            android:layout_height="@dimen/_16sp"
                            android:src="@drawable/ic_corner_up_left"
                            android:tint="@color/colorPrimary" />

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/spacing_middle"
                            android:gravity="center_vertical"
                            android:text="Reply"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lyt_btn_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_small">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_down"
                            android:tint="@color/colorPrimary" />

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/spacing_middle"
                            android:gravity="center_vertical"
                            android:text="More"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/layout_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_middle"
                android:visibility="gone">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_avatar_question"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/pic" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:layout_toEndOf="@+id/img_avatar_question"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.jobtick.TextView.TextViewBold
                            android:id="@+id/txt_name_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/txt_created_date_question"
                            android:singleLine="true"
                            android:text="Nathan Fox"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />


                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_created_date_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="21 min. ago"
                            android:textColor="@color/grey_40"
                            android:textSize="@dimen/_12sp" />

                    </RelativeLayout>


                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_message_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="adipisicing adipisicing commodo Lorem enim si adipis adipisicing commodo Lorem enim si..."
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:overScrollMode="never" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lyt_btn_reply_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_small">

                            <ImageView
                                android:layout_width="@dimen/_16sp"
                                android:layout_height="@dimen/_16sp"
                                android:src="@drawable/ic_corner_up_left"
                                android:tint="@color/colorPrimary" />

                            <com.jobtick.TextView.TextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/spacing_middle"
                                android:gravity="center_vertical"
                                android:text="Reply"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lyt_btn_more_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_small">

                            <ImageView
                                android:id="@+id/img_more_less_arrow"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_down"
                                android:tint="@color/colorPrimary" />

                            <com.jobtick.TextView.TextViewBold
                                android:id="@+id/txt_more_less"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/spacing_middle"
                                android:gravity="center_vertical"
                                android:text="More"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_offer_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

        </LinearLayout>



    <LinearLayout

        android:layout_alignParentBottom="true"
        android:id="@+id/lyt_create_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rlt_layout_action_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/spacing_middle"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_toStartOf="@+id/card_send"
                android:elevation="@dimen/spacing_large"
                app:cardCornerRadius="@dimen/spacing_middle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_middle">

                    <ImageView
                        android:id="@+id/img_btn_image_select"
                        android:layout_width="@dimen/_24sp"
                        android:layout_height="@dimen/_24sp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_paperclip" />

                    <com.jobtick.EditText.EditTextRegular
                        android:id="@+id/edt_comment_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_toEndOf="@+id/img_btn_image_select"
                        android:background="@null"
                        android:hint="Type message..."
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:textSize="@dimen/_12sp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginEnd="@dimen/spacing_middle"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="@dimen/spacing_large"
                app:cardCornerRadius="@dimen/spacing_middle">

                <ImageView
                    android:id="@+id/img_btn_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/spacing_middle"
                    android:src="@drawable/ic_send" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>