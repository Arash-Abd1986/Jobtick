<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/header"
        layout="@layout/header_new_design"/>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginBottom="20dp"
            style="@style/materialText_400_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@color/neutral_light_500"
            android:text="REASON FOR REPORT" />

        <RelativeLayout
            android:id="@+id/spamParent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_400_12"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/profile_acounts_values"
                android:textColor="@color/neutral_light_700"
                android:text="Spam" />

            <ImageView
                android:visibility="gone"

                app:tint="@color/primary_p500_base_light"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/new_design_one_tick"
                android:id="@+id/tick1"
                android:layout_width="16dp"
                android:layout_height="17dp"/>

        </RelativeLayout>
        <View
            android:background="@color/neutral_light_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/harrasmentParent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_400_12"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/profile_acounts_values"
                android:textColor="@color/neutral_light_700"
                android:text="Harrasment or Offensive" />
            <ImageView
android:visibility="gone"
                app:tint="@color/primary_p500_base_light"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/new_design_one_tick"
                android:id="@+id/tick2"
                android:layout_width="16dp"
                android:layout_height="17dp"/>

        </RelativeLayout>
        <View
            android:background="@color/neutral_light_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/otherParent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_400_12"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/profile_acounts_values"
                android:textColor="@color/neutral_light_700"
                android:text="Others" />
            <ImageView
                android:visibility="gone"

                app:tint="@color/primary_p500_base_light"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/new_design_one_tick"
                android:id="@+id/tick3"
                android:layout_width="16dp"
                android:layout_height="17dp"/>

        </RelativeLayout>

    </LinearLayout>
    <View
        android:background="@color/neutral_light_50"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <RelativeLayout
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:paddingTop="16dp"
        android:layout_marginBottom="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/about"
            style="@style/outlineTextField"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comment (Optional)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/about_text"
                android:textSize="18dp"
                android:gravity="start|top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:maxHeight="300dp"
                android:minHeight="300dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>