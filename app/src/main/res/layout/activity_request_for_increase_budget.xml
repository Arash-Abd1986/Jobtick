<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.RequestForIncreaseBudgetActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        app:title="Request for Increase Budget"
        app:navigationIcon="@drawable/ic_back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        app:contentInsetStartWithNavigation="0dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/toolbar"
        android:layout_above="@id/lyt_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_large"
                    >

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info"
                        android:tint="@color/colorPrimary"/>


                    <com.jobtick.TextView.TextViewRegular
                        android:layout_marginStart="@dimen/spacing_large"
                        android:id="@+id/txt_text"
                        android:layout_toEndOf="@+id/img_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New budget request from "
                        android:textSize="@dimen/_12sp"
                        android:textColor="@color/textColor"
                        android:layout_centerVertical="true"/>

                    <com.jobtick.TextView.TextViewRegular
                        android:layout_toEndOf="@+id/txt_text"
                        android:id="@+id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="@dimen/_12sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerVertical="true"/>



                </RelativeLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/spacing_middle"
                android:elevation="@dimen/spacing_middle"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_large"
                android:orientation="vertical"
                >

                <com.jobtick.TextView.TextViewSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reason to increase"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <com.jobtick.TextView.TextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                    android:textColor="@color/grey_40"
                    android:id="@+id/txt_reason"/>


            </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_line"
                        android:background="@color/grey_10"
                        />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_large">

                            <com.jobtick.TextView.TextViewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Overview"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_7sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.jobtick.TextView.TextViewMedium
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:singleLine="true"
                                        android:text="Previous budget"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_16sp" />


                                    <com.jobtick.TextView.TextViewBold
                                        android:id="@+id/txt_pervious_budget"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:text="$ 175"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_16sp"
                                        android:textStyle="bold" />


                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_7sp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.jobtick.TextView.TextViewMedium
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:singleLine="true"
                                        android:text="Increase budget"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_16sp" />


                                    <com.jobtick.TextView.TextViewBold
                                        android:id="@+id/txt_increase_budget"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:text="$ 25"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_16sp"
                                        android:textStyle="bold" />


                                </RelativeLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_7sp" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.jobtick.TextView.TextViewBold
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:singleLine="true"
                                        android:drawablePadding="@dimen/spacing_middle"
                                        android:drawableEnd="@drawable/ic_info_2"
                                        android:text="Youâ€™ll Pay:"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/_16sp"
                                        android:textStyle="bold" />


                                    <com.jobtick.TextView.TextViewBold
                                        android:layout_centerVertical="true"
                                        android:id="@+id/txt_total_cost"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:text="$ 200"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/_20sp"
                                        android:textStyle="bold" />


                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.jobtick.TextView.TextViewBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Payment Method"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_12sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_7sp" />

                                <RelativeLayout
                                    android:id="@+id/rlt_payment_method"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/img_brand"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/visa" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/spacing_large"
                                        android:layout_marginEnd="@dimen/spacing_large"
                                        android:layout_toStartOf="@+id/card_update"
                                        android:layout_toEndOf="@id/img_brand"
                                        android:orientation="vertical">

                                        <com.jobtick.TextView.TextViewBold
                                            android:id="@+id/txt_account_number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:singleLine="true"
                                            android:text="**** **** **** 4949"
                                            android:textColor="@color/textColor"
                                            android:textSize="@dimen/_16sp"
                                            android:textStyle="bold" />

                                        <com.jobtick.TextView.TextViewMedium
                                            android:id="@+id/txt_expires_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:singleLine="true"
                                            android:text="Expires 06/22"
                                            android:textColor="@color/textColor"
                                            android:textSize="@dimen/_16sp" />


                                    </LinearLayout>


                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/card_update"
                                        android:layout_width="@dimen/_70dp"
                                        android:layout_height="@dimen/_35sp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="@dimen/spacing_line"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:elevation="@dimen/spacing_middle"
                                        app:cardCornerRadius="@dimen/spacing_middle">

                                        <TextView
                                            android:textSize="@dimen/_10sp"
                                            android:id="@+id/txt_btn_update"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:background="?attr/selectableItemBackground"
                                            android:gravity="center"
                                            android:text="UPDATE"
                                            android:textColor="@color/white" />
                                    </androidx.cardview.widget.CardView>


                                </RelativeLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/lyt_card_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">





                                    <com.stripe.android.view.CardMultilineWidget
                                        android:visibility="visible"
                                        android:id="@+id/card_multiline_widget"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                    </com.stripe.android.view.CardMultilineWidget>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/spacing_large"/>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/card_add_payment_method"
                                        android:layout_width="match_parent"
                                        android:layout_height="46dp"
                                        android:layout_margin="@dimen/spacing_line"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:elevation="@dimen/spacing_middle"
                                        app:cardCornerRadius="@dimen/spacing_medium">

                                        <LinearLayout
                                            android:id="@+id/lyt_btn_add_payment_method"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="?attr/selectableItemBackground"
                                            android:gravity="center">

                                            <com.jobtick.TextView.TextViewMedium
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="Add Payment Method"
                                                android:textAllCaps="true"
                                                android:textColor="@color/white"
                                                android:textSize="14sp" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




    <LinearLayout
        android:id="@+id/lyt_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:id="@+id/card_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:backgroundTint="@color/red_600"
            android:elevation="@dimen/spacing_middle"
            app:cardCornerRadius="@dimen/spacing_medium">

            <LinearLayout
                android:id="@+id/lyt_btn_decline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <com.jobtick.TextView.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/decline"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="@dimen/spacing_medium"
            android:layout_height="match_parent"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_accept"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="@dimen/spacing_middle"
            app:cardCornerRadius="@dimen/spacing_medium">

            <LinearLayout
                android:id="@+id/lyt_btn_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <com.jobtick.TextView.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accept"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sp"
                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>



</RelativeLayout>