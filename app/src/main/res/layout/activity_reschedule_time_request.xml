<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_previous_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:backgroundTint="@color/colorF0F0F0"
                android:elevation="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/previous_time"
                        android:textAppearance="@style/materialText_600_14"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt_previous_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/inset_ellipse_primary"
                            android:textAppearance="@style/materialText_500_14"
                            android:textColor="@color/textColor"
                            tools:text="Tomorrow" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt_previous_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:drawableStart="@drawable/inset_ellipse_primary"
                            android:textAppearance="@style/materialText_500_14"
                            android:textColor="@color/textColor"
                            tools:text="Morning" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.jobtick.widget.ExtendedEntryText
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_previous_time"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                app:eInputType="calendar"
                app:eTitle="@string/date" />

            <com.jobtick.widget.ExtendedCommentText
                android:id="@+id/edt_note"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/txt_date"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                app:eIsMandatory="true"
                app:eMaxCharSize="200"
                app:eMinCharSize="25"
                app:eTitle="@string/reason" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/lyt_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lyt_btn_decline"
            style="@style/materialButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/strokeRed"
            android:text="Cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lyt_btn_verify"
            style="@style/materialButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:text="@string/submit" />

    </LinearLayout>

</RelativeLayout>