        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sp"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:elevation="0dp"
        android:visibility="visible"
        android:layout_marginStart="16dp"
