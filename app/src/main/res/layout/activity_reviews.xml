<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.ReviewsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Job Reviews" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_middle"
        app:cardCornerRadius="@dimen/spacing_middle"
        app:cardElevation="@dimen/spacing_middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rlt_profile"
                    android:layout_width="@dimen/_76dp"
                    android:layout_height="@dimen/_76dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pic" />


                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:background="@drawable/ic_level_1"
                        android:visibility="gone" />


                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:id="@+id/img_verified_account"
                        android:background="@drawable/ic_correct" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:layout_toStartOf="@+id/lyt_budget_status"
                    android:layout_toEndOf="@+id/rlt_profile"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Nathan Fox"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold" />

                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_reviews_counts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="12sp" />


                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_completion_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />


                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_mlarge" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingbar"
                    style="@style/Yellow.AppCompatRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:theme="@style/Yellow.AppCompatRatingBar" />

                <com.jobtick.TextView.TextViewBold
                    android:id="@+id/txt_rating_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_marginStart="7dp"
                        android:text="5"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingbar_5_star"
                        style="@style/Yellow.Small.AppCompatRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_toEndOf="@+id/txt_5"
                        android:numStars="1"
                        android:rating="1"
                        android:saveEnabled="true"
                        android:stepSize="1"
                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                    <ProgressBar
                        android:id="@+id/progress_bar_5_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_5_star"
                        android:layout_toEndOf="@+id/ratingbar_5_star"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/color_primary_progress" />


                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_review_count_5_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:text="(1)"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/_14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="7dp"
                        android:text="4"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingbar_4_star"
                        style="@style/Yellow.Small.AppCompatRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_toEndOf="@+id/txt_4"
                        android:numStars="1"
                        android:rating="1"
                        android:saveEnabled="true"
                        android:stepSize="1"
                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                    <ProgressBar
                        android:id="@+id/progress_bar_4_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_4_star"

                        android:layout_toEndOf="@+id/ratingbar_4_star"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/color_primary_progress" />

                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_review_count_4_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:text="(10)"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/_14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="7dp"
                        android:text="3"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingbar_3_star"
                        style="@style/Yellow.Small.AppCompatRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_toEndOf="@+id/txt_3"
                        android:numStars="1"
                        android:rating="1"
                        android:saveEnabled="true"
                        android:stepSize="1"
                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                    <ProgressBar
                        android:id="@+id/progress_bar_3_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_3_star"

                        android:layout_toEndOf="@+id/ratingbar_3_star"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/color_primary_progress" />

                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_review_count_3_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:text="(10)"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/_14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="7dp"
                        android:text="2"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingbar_2_star"
                        style="@style/Yellow.Small.AppCompatRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_toEndOf="@+id/txt_2"
                        android:numStars="1"
                        android:rating="1"
                        android:saveEnabled="true"
                        android:stepSize="1"
                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                    <ProgressBar
                        android:id="@+id/progress_bar_2_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_2_star"

                        android:layout_toEndOf="@+id/ratingbar_2_star"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/color_primary_progress" />

                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_review_count_2_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:text="(10)"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/_14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="7dp"
                        android:text="1"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingbar_1_star"
                        style="@style/Yellow.Small.AppCompatRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_toEndOf="@+id/txt_1"
                        android:numStars="1"
                        android:rating="1"
                        android:saveEnabled="true"
                        android:stepSize="1"
                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                    <ProgressBar
                        android:id="@+id/progress_bar_1_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_1_star"

                        android:layout_toEndOf="@+id/ratingbar_1_star"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/color_primary_progress" />

                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_review_count_1_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:text="(10)"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/_14sp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview_review"
        tools:listitem="@layout/item_review">

    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>