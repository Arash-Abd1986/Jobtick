<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    tools:context=".activities.ReviewsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Job Reviews" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/_20sp"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/spacing_medium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="@dimen/_10sp"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_place_holder" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/img_avatar"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/img_verified"
                            android:layout_width="@dimen/_20sp"
                            android:layout_height="@dimen/_20sp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_shield" />

                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sp"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_full_name"
                        style="@style/materialText_600_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/colorNavyBlue"
                        tools:text="@string/jessie_albon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_suburb"
                        style="@style/materialText_400_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_2sp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:textColor="@color/colorNavyBlue"
                        tools:text="@string/surfers_paradise_australia" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_large" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sp"
                    android:background="@drawable/bg_profile_rate"
                    android:gravity="center"
                    android:padding="@dimen/_5sp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivMedal3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_medal3" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <RadioGroup
                    android:id="@+id/rgTabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sp"
                    android:layout_marginEnd="@dimen/_20sp"
                    android:background="@drawable/radio_profile_bg"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ticker"
                        style="@style/materialText_600_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/radio_portfolio"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:text="@string/as_a_ticker"
                        android:textColor="@color/textColor"
                        tools:ignore="TooDeepLayout" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/poster"
                        style="@style/materialText_600_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/radio_portfolio"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="@string/as_a_poster"
                        android:textColor="@color/blue" />

                </RadioGroup>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sp"
                android:layout_marginBottom="@dimen/_15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingbar"
                    style="@style/CustumRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="0.5"
                    android:theme="@style/Yellow.AppCompatRatingBar" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_rating_values"
                    style="@style/materialText_600_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5sp"
                    android:text="@string/_4_6"
                    android:textColor="@color/colorTaskAssigned" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_reviews_counts"
                    style="@style/materialText_700_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5sp"
                    android:text="@string/_33_reviews"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_5"
                        style="@style/materialText_500_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="end"
                        android:layout_marginStart="7dp"
                        android:text="@string/_5"
                        android:textColor="@color/textColor" />

                    <ProgressBar
                        android:id="@+id/progress_bar_5_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_5_star"
                        android:layout_toEndOf="@+id/txt_5"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/color_primary_progress" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_review_count_5_star"
                        style="@style/materialText_600_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:textColor="@color/_4f4f4f"
                        tools:text="(1)" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_4"
                        style="@style/materialText_500_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="7dp"
                        android:text="@string/_4"
                        android:textColor="@color/textColor" />


                    <ProgressBar
                        android:id="@+id/progress_bar_4_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_4_star"
                        android:layout_toEndOf="@+id/txt_4"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/color_primary_progress" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_review_count_4_star"
                        style="@style/materialText_600_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:textColor="@color/_4f4f4f"
                        tools:text="(10)" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_3"
                        style="@style/materialText_500_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="7dp"
                        android:text="@string/_3"
                        android:textColor="@color/textColor" />


                    <ProgressBar
                        android:id="@+id/progress_bar_3_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_3_star"
                        android:layout_toEndOf="@+id/txt_3"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/color_primary_progress" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_review_count_3_star"
                        style="@style/materialText_600_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:textColor="@color/_4f4f4f"
                        tools:text="(10)" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_2"
                        style="@style/materialText_500_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="7dp"
                        android:text="@string/_2"
                        android:textColor="@color/textColor" />


                    <ProgressBar
                        android:id="@+id/progress_bar_2_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_2_star"
                        android:layout_toEndOf="@+id/txt_2"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/color_primary_progress" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_review_count_2_star"
                        style="@style/materialText_600_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:textColor="@color/_4f4f4f"
                        tools:text="(10)" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_1"
                        style="@style/materialText_500_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="7dp"
                        android:text="@string/_1"
                        android:textColor="@color/textColor" />

                    <ProgressBar
                        android:id="@+id/progress_bar_1_star"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:layout_toStartOf="@+id/txt_review_count_1_star"
                        android:layout_toEndOf="@+id/txt_1"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/color_primary_progress" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_review_count_1_star"
                        style="@style/materialText_600_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="@dimen/spacing_mxlarge"
                        android:textColor="@color/_4f4f4f"
                        tools:text="(10)" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.textview.MaterialTextView
        style="@style/materialText_600_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sp"
        android:layout_marginTop="@dimen/_10sp"
        android:layout_marginBottom="@dimen/_10sp"
        android:singleLine="true"
        android:text="@string/review"
        android:textColor="@color/colorPrimary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_review"
        android:layout_margin="5dp">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>