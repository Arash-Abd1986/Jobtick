                            android:id="@+id/txt_2P"
                            style="@style/materialText_500_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="7dp"
                            android:text="@string/_2"
                            android:textColor="@color/textColor" />

                        <ProgressBar
                            android:id="@+id/progress_bar_2_starP"
                            style="@style/CustomProgressBarHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/spacing_middle"
                            android:layout_marginEnd="@dimen/spacing_middle"
                            android:layout_toStartOf="@+id/txt_review_count_2_starP"
                            android:layout_toEndOf="@+id/txt_2P"
                            android:indeterminate="false"
                            android:max="5"
                            android:progress="0"
                            android:progressDrawable="@drawable/color_primary_progress" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt_review_count_2_starP"
                            style="@style/materialText_600_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:minWidth="@dimen/spacing_mxlarge"
                            android:textColor="@color/_4f4f4f"
                            tools:text="(0)" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt_1P"
                            style="@style/materialText_500_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="7dp"
                            android:text="@string/_1"
                            android:textColor="@color/textColor" />

                        <ProgressBar
                            android:id="@+id/progress_bar_1_starP"
                            style="@style/CustomProgressBarHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/spacing_middle"
                            android:layout_marginEnd="@dimen/spacing_middle"
                            android:layout_toStartOf="@+id/txt_review_count_1_starP"
                            android:layout_toEndOf="@+id/txt_1P"
                            android:indeterminate="false"
                            android:max="5"
                            tools:progress="0"
                            android:progressDrawable="@drawable/color_primary_progress" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt_review_count_1_starP"
                            style="@style/materialText_600_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:minWidth="@dimen/spacing_mxlarge"
                            android:textColor="@color/_4f4f4f"
                            tools:text="(0)" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        style="@style/materialText_600_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sp"
        android:layout_marginTop="@dimen/_10sp"
        android:layout_marginBottom="@dimen/_10sp"
        android:singleLine="true"
        android:text="@string/review"
        android:textColor="@color/N600" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/white"
            android:id="@+id/recyclerview_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            tools:listitem="@layout/item_review" />

        <LinearLayout
            android:id="@+id/lyt_no_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/shape_tab_primary"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_tab_primary"
                android:contentDescription="@string/todo"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/ic_thumbs_down" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_tab_primary"
                android:contentDescription="@string/todo"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/ic_thumbs_up" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_no_review"
            style="@style/materialText_600_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/no_review"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
