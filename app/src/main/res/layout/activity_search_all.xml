<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:background="@drawable/rectangle_button_round_corners_outlined"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_back" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_search_categoreis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:hint="@string/SearchCategories"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:textAppearance="@style/materialText_400_12"
            android:textColor="@color/grey_70"
            android:textColorHint="@color/grey_70" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_category_search" />


            <RelativeLayout
                android:id="@+id/empty_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_no_search_found" />


                    <com.google.android.material.textview.MaterialTextView
                        style="@style/materialText_400_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sp"
                        android:layout_marginBottom="@dimen/_15sp"
                        android:gravity="center"
                        android:text="@string/we_didn_t_find_any_results_for_your_search" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/lyt_search_new"
                        style="@style/materialButton.outlined"
                        android:layout_width="245dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:gravity="center"
                        android:text="@string/start_a_new_search"
                        android:textColor="@color/blueButtons"
                        android:textSize="@dimen/_14sp"
                        app:strokeColor="@color/blueButtons"
                        app:strokeWidth="@dimen/outline_normal" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/back_to_activity"
                        style="@style/materialButton"
                        android:layout_width="245dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="@dimen/_16sp"
                        android:text="@string/categories"
                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>
    </FrameLayout>

</LinearLayout>