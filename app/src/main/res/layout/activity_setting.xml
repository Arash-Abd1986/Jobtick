<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    tools:context=".activities.SettingActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="160dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.jobtick.widget.ExtendedSettingItem
            android:id="@+id/edit_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="@dimen/spacing_large"
            app:eSettingTitle="@string/edit_account"/>

        <com.jobtick.widget.ExtendedSettingItem
            android:id="@+id/payment_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="@dimen/spacing_large"
            app:eSettingTitle="@string/payment_settings"/>

        <com.jobtick.widget.ExtendedSettingItem
            android:id="@+id/notification_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="@dimen/spacing_large"
            app:eSettingTitle="@string/notification_settings"/>

        <com.jobtick.widget.ExtendedSettingItem
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="@dimen/spacing_large"
            app:eSettingTitle="@string/change_password"/>

    </LinearLayout>

</LinearLayout>