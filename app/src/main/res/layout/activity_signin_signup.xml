<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jobTickExplaination"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="@dimen/_25sp"
        android:layout_gravity="top">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-18dp"
            android:layout_marginBottom="@dimen/_15sp"
            android:src="@mipmap/ic_launcher_foreground" />

        <com.jobtick.text_view.TextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sp"
            android:text="It's where the job is done"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cityAnimation"
        android:paddingStart="@dimen/_30dp"
        android:paddingEnd="@dimen/_30dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:id="@+id/lyt_btn_sign_up"
            style="@style/materialButton"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:id="@+id/lyt_btn_sign_in"
            style="@style/materialButton.outlined"
            android:text="@string/log_in"
            android:textColor="@color/blueButtons"
            app:strokeColor="@color/blueButtons"
            app:strokeWidth="@dimen/outline_normal"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>

    <include layout="@layout/view_city_anim"/>

</RelativeLayout>