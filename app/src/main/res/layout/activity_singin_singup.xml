<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:padding="@dimen/_25sp"
        android:layout_gravity="top">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-18dp"
            android:layout_marginBottom="@dimen/_15sp"
            android:src="@mipmap/ic_launcher_foreground" />

        <com.jobtick.TextView.TextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sp"
            android:text="Lorem Ipsum is simply \ndummy printing."
            android:textColor="@color/textColor"
            android:textSize="@dimen/_20sp" />

        <com.jobtick.TextView.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the typesetting industry." />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:paddingStart="@dimen/_25sp"
        android:paddingEnd="@dimen/_25sp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:id="@+id/lyt_btn_sign_up"
            style="@style/materialButton.medium"
            android:text="@string/sign_up"
            android:background="@color/blueButtons"
            android:textColor="@color/white"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:id="@+id/lyt_btn_sign_in"
            style="@style/materialButton.medium.outlined"
            android:text="@string/log_in"
            android:textColor="@color/blueButtons"
            app:strokeColor="@color/blueButtons"
            app:strokeWidth="@dimen/outline_normal" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/city"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:scaleType="centerCrop"
        android:layout_gravity="bottom" />


</LinearLayout>