<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:overScrollMode="never">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background"
            app:contentInsetStartWithNavigation="0dp"
            app:title="Profile"
            app:navigationIcon="@drawable/ic_cancel"
            app:titleTextColor="@color/textColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_medium" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:elevation="@dimen/spacing_mlarge"
            app:cardCornerRadius="@dimen/spacing_middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pic" />


                        <ImageView
                            android:id="@+id/img_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"
                            android:background="@drawable/ic_correct" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_account_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/shape_rounded_white"
                            android:backgroundTint="@color/grey_5"
                            android:paddingStart="@dimen/spacing_xlarge"
                            android:paddingTop="@dimen/spacing_middle"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingBottom="@dimen/spacing_middle"
                            android:text="Account Level 2"
                            android:textColor="#4f4f4f"
                            android:textSize="10sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="-15dp"
                            android:layout_toLeftOf="@+id/txt_account_level">


                            <ImageView
                                android:id="@+id/img_level"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:src="@drawable/ic_level_1" />

                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/lyt_btn_get_a_quote"
                        android:orientation="vertical">


                        <com.jobtick.TextView.TextViewSemiBold
                            android:id="@+id/txt_full_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jessie Albon"
                            android:textColor="@color/textColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_suburb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Surfers Paradise, Australia"
                            android:textColor="@color/grey_40"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lyt_btn_get_a_quote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <com.jobtick.TextView.TextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rounded_white"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="@dimen/spacing_middle"
                            android:text="GET A QUOTE"
                            android:textColor="@color/white"
                            android:textSize="10sp" />


                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/spacing_middle"
                        android:layout_height="@dimen/spacing_middle"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_rounded_primary"
                        android:backgroundTint="@color/grey_40"
                        android:gravity="center_vertical" />

                    <com.jobtick.TextView.TextViewSemiBold
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/txt_last_seen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:text="Last Seen 4:35 PM"
                        android:textColor="@color/grey_40"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_medium" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:elevation="@dimen/spacing_mlarge"
            app:cardCornerRadius="@dimen/spacing_middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_small"
                    app:cardCornerRadius="@dimen/spacing_middle">

                    <RadioGroup
                        android:id="@+id/rg_ticker_poster"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rb_as_a_ticker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_left_tab"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="As A Ticker"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/radio_btn" />

                        <RadioButton
                            android:id="@+id/rb_as_a_poster"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_right_tab"
                            android:button="@null"
                            android:gravity="center"
                            android:text="As A Poster"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/radio_btn" />

                    </RadioGroup>


                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingbar"
                            style="@style/Yellow.AppCompatRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:theme="@style/Yellow.AppCompatRatingBar" />


                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_completion_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:text="0% Completion Rate"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_rating_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_middle"
                            android:textColor="@color/textColor"
                            android:textSize="14sp" />


                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_line"
                    android:background="@color/grey_10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_reviews_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_btn_see_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="See Reviews >"
                        android:background="?attr/selectableItemBackground"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_medium" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:elevation="@dimen/spacing_mlarge"
            app:cardCornerRadius="@dimen/spacing_middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_small"
                    app:cardCornerRadius="@dimen/spacing_middle">

                    <RadioGroup
                        android:id="@+id/rg_about_skills_badges_portfolio"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <RadioButton
                            android:id="@+id/rb_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_center_tab"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="ABOUT"
                            android:textColor="@color/radio_btn"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/rb_skills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_center_tab"
                            android:button="@null"
                            android:gravity="center"
                            android:text="SKILLS"
                            android:textColor="@color/radio_btn"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/rb_badges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_center_tab"
                            android:button="@null"
                            android:gravity="center"
                            android:text="BADGES"
                            android:textColor="@color/radio_btn"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/rb_portfolio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_right_tab"
                            android:button="@null"
                            android:gravity="center"
                            android:text="PORTFOLIO"
                            android:textColor="@color/radio_btn"
                            android:textSize="10sp" />


                    </RadioGroup>


                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_large" />

                <LinearLayout
                    android:id="@+id/lyt_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <com.jobtick.TextView.TextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="About Me"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_medium" />


                    <com.jobtick.TextView.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Excepteur qui qui fugiat et esse pariatur voluptate exercitation esse officia cillum occaecat culpa pariatur. Nisi in ut tempor laborum officia dolore ad occaecat. Anim ad voluptate proident ea commodo qui velit officia minim."
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:id="@+id/txt_about"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lyt_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.jobtick.TextView.TextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="SKILLS"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_medium" />

                    <LinearLayout
                        android:id="@+id/lyt_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Education"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.hootsuite.nachos.NachoTextView
                            android:id="@+id/tag_education"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:background="@android:color/transparent"
                            android:enabled="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_specialities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Specialities"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.hootsuite.nachos.NachoTextView
                            android:id="@+id/tag_specialities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:background="@android:color/transparent"
                            android:enabled="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Language"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.hootsuite.nachos.NachoTextView
                            android:id="@+id/tag_language"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Work"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.hootsuite.nachos.NachoTextView
                            android:id="@+id/tag_experience"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_transportation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Transportation"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.hootsuite.nachos.NachoTextView
                            android:id="@+id/tag_transportation"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view_portfolio"
                    android:overScrollMode="never"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_middle" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>