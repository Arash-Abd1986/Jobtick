<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"

    android:layout_width="match_parent"
    android:layout_height="46dp">
    <com.google.android.material.textview.MaterialTextView

        android:layout_toStartOf="@+id/checked"
        android:id="@+id/txt_title"
        style="@style/materialText_400_12"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/profile_acounts_values"
        android:textColor="@color/neutral_light_700"
        android:text="About me" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/checked"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/new_design_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/separator"
        android:layout_alignParentBottom="true"
        android:background="@color/neutral_light_100"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>