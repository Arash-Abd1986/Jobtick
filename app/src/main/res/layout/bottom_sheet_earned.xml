<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:minHeight="200dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_large"
        android:src="@drawable/ic_down"
        tools:ignore="ContentDescription" />

    <com.jobtick.text_view.TextViewMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Earned Details"
        android:textColor="@color/textColor"
        android:textSize="12dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:elevation="0dp"
        android:visibility="visible"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4D576A"
            android:padding="16dp">

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Account Name"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_bsb"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="8dp"
                android:text="@string/bsb"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_account_number"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:text="@string/account_number"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

            <com.jobtick.text_view.TextViewMedium
                android:id="@+id/tv_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="******1234"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

            <com.jobtick.text_view.TextViewBold
                android:id="@+id/tv_bsb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="0123456"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal">

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <com.jobtick.text_view.TextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_amount"
                tools:text="xxx"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="horizontal">

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="Service Fee(5%)"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <com.jobtick.text_view.TextViewMedium
                android:id="@+id/tv_service_fee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="xxx"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="horizontal">

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="GST(10%)"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_gst"
                android:text="xxx"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:orientation="horizontal">

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="Date"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date"
                tools:text="xxx"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="horizontal">

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="Time"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:text="xxx"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="horizontal">

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="Status"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <com.jobtick.text_view.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_status"
                android:text="xxx"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

