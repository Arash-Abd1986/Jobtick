<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <include layout="@layout/view_bottom_sheet_top_handler" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_sheet_handler"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Increase price request"
            android:textAppearance="@style/materialText_500_14"
            android:textColor="@color/textColor" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="From"
            android:textAppearance="@style/materialText_600_16"
            android:textColor="@color/textColor" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/from"
            android:textAppearance="@style/materialText_600_16"
            android:textColor="@color/colorPrimary"
            tools:text="Sajad B." />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/from"
            android:text="Job title"
            android:textAppearance="@style/materialText_600_14"
            android:textColor="@color/colorPrimary" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/from"
            android:textAppearance="@style/materialText_700_14"
            android:textColor="@color/textColor"
            tools:text="Clean my two bedroom witnin 6 hours in my apartment" />

        <LinearLayout
            android:id="@+id/old_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangle_round_corners_light_blue_8dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/old_price"
                android:textAppearance="@style/materialText_500_14"
                android:textColor="@color/textColor" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:text="$ 0.0"
                android:textAppearance="@style/materialText_700_18"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/old_price_container"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangle_round_corners_light_blue_8dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/new_price"
                android:textAppearance="@style/materialText_500_14"
                android:textColor="@color/textColor" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:text="$ 0.0"
                android:textAppearance="@style/materialText_700_18"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_price_container"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/from"
            android:text="@string/reason"
            android:textAppearance="@style/materialText_600_14"
            android:textColor="@color/colorPrimary" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reason_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reason"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/from"
            android:textAppearance="@style/materialText_600_14"
            android:textColor="@color/textColor"
            tools:text="Reason here in publishing and graphic design, Lorem ipsum" />

        <LinearLayout
            android:id="@+id/lyt_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reason_description"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_decline"
                style="@style/materialButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/strokeRed"
                android:text="@string/decline" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accept"
                style="@style/materialButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="@string/accept" />

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lytWithDraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_button"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWithdraw"
                style="@style/materialButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/strokeRed"
                android:text="@string/withdrawal_the_request" />



        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
