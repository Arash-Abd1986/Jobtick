<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_large"
        android:src="@drawable/ic_down">

    </ImageView>

    <com.jobtick.TextView.TextViewMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/requirements"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_14sp">

    </com.jobtick.TextView.TextViewMedium>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_margin="@dimen/spacing_mlarge"
      android:layout_gravity="center"
      android:gravity="center"
      android:background="@drawable/shape_rounded_gray">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_image"
    android:padding="@dimen/spacing_medium"
    android:layout_margin="@dimen/spacing_xmedium"/>
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_credit_card"
          android:padding="@dimen/spacing_medium"
          android:layout_margin="@dimen/spacing_xmedium"/>
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_map_pin"
          android:padding="@dimen/spacing_medium"
          android:layout_margin="@dimen/spacing_xmedium"/>
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_calendar"
          android:padding="@dimen/spacing_medium"
          android:layout_margin="@dimen/spacing_xmedium"/>
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_phone"
          android:padding="@dimen/spacing_medium"
          android:layout_margin="@dimen/spacing_xmedium"/>
  </LinearLayout>

    <com.jobtick.TextView.TextViewMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_mlarge"
        android:text="@string/upload_a_profile_picture"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_14sp"/>


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgLogo"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_gravity="center"
            android:background="@drawable/logo"/>



            <com.jobtick.TextView.TextViewMedium
                android:id="@+id/txt_btn_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/spacing_mlarge"
                android:padding="@dimen/spacing_large"
                android:text="@string/next"
                android:background="@drawable/shape_center_tab_primary"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp" />


</LinearLayout>