        android:layout_height="wrap_content">

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jobtick.TextView.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/textColor"
            android:layout_margin="@dimen/_16sp"
            android:text="Sort By">

        </com.jobtick.TextView.TextViewMedium>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_16sp"
            android:src="@drawable/ic_filter_close">

        </ImageView>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/radioFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/radioAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_square_selector"
                android:checked="true"
                android:paddingStart="@dimen/_15sp"
                android:text="All Jobs" />

            <RadioButton
                android:id="@+id/radioDraft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_square_selector"
                android:paddingStart="@dimen/_15sp"
                android:text="Draft" />

            <RadioButton
                android:id="@+id/radioCancelled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_square_selector"
                android:paddingStart="@dimen/_15sp"
                android:text="Cancelled" />

            <RadioButton
                android:id="@+id/radioAssigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_square_selector"
                android:paddingStart="@dimen/_15sp"
                android:text="Assigned" />

            <RadioButton
                android:id="@+id/radioOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_square_selector"
                android:paddingStart="@dimen/_15sp"
                android:text="Open" />


            <RadioButton
                android:id="@+id/radioPending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_square_selector"
                android:paddingStart="@dimen/_15sp"
                android:text="Pending" />


            <RadioButton
                android:id="@+id/radioCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_square_selector"
                android:paddingStart="@dimen/_15sp"
                android:text="Completed" />

            <RadioButton
                android:id="@+id/radioOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_square_selector"
                android:paddingStart="@dimen/_15sp"
                android:text="Offered" />


        </RadioGroup>


