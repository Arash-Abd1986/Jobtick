<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    app:cardCornerRadius="16dp"
    app:contentPaddingBottom="16dp"
    app:contentPaddingLeft="24dp"
    app:contentPaddingRight="24dp"
    app:contentPaddingTop="12dp">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            style="@style/heading4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Add an attachment" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:gravity="start"
            android:textColor="@color/neutral_light_600"
            android:text="Are you sure you want to discard this process? Your changes will be lost." />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:layout_marginTop="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel"
                style="@style/colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/primary"
                app:iconPadding="16dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="34dp"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginBottom="@dimen/_8dp"
                android:background="@color/neutral_light_100" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/discard"
                style="@style/colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="Discard"
                android:textColor="@color/primary_error"
                app:iconPadding="16dp" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>