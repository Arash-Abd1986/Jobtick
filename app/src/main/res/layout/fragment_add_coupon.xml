<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_down"
        tools:ignore="ContentDescription"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/materialText_500_18"
        android:text="@string/promo_code"
        android:gravity="center"
        android:layout_below="@id/handle"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <EditText
            android:id="@+id/etPromoCode"
            android:background="@drawable/bg_dark_border"
            android:hint="@string/enter_your_promo_code"
            android:layout_width="match_parent"
            style="@style/materialText_500_14"
            android:layout_height="50dp"
            android:layout_toStartOf="@id/actionFrame"
            android:importantForAutofill="no" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:id="@+id/tvError"
            style="@style/materialText_500_14"
            android:layout_below="@id/etPromoCode"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorRedBalance"
            android:visibility="gone"
            android:text="@string/that_code_isn_t_valid_or_has_been_expired"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@+id/actionFrame"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp">

            <ImageView
                android:id="@+id/ivState"
                android:padding="6dp"
                android:src="@drawable/ic_unverified_coupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/pbLoading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"/>
        </FrameLayout>

    </RelativeLayout>






    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        style="@style/materialText_700_14"
        android:layout_below="@id/content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp" />

</RelativeLayout>

