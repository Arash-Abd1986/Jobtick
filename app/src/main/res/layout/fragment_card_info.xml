<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".material.ui.jobdetails.CardInfoFragment">

    <include layout="@layout/card_info_heading" />

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            style="@style/body3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Card Number"
            android:textColor="@color/neutral_light_700" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_CardNumber"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/neutral_light_500" />
    </LinearLayout>

    <View
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutral_light_50" />
    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            style="@style/body3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Expiry Date"
            android:textColor="@color/neutral_light_700" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_date"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/neutral_light_500" />
    </LinearLayout>

    <View
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutral_light_50" />

    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            style="@style/body3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CVC"
            android:textColor="@color/neutral_light_700" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_CVC"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/neutral_light_500" />
    </LinearLayout>
</LinearLayout>