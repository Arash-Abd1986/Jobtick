<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/credit_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.AddBankAccountReqFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="@string/add_credit_card"
                android:textAppearance="@style/materialText_500_14"/>

            <com.jobtick.widget.ExtendedEntryText
                android:id="@+id/edt_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:eImeOptions="actionNext"
                app:eStartFocus="true"
                app:eInputType="text"
                app:eTitle="@string/full_name"
                app:eBoxSize="small"/>

            <com.jobtick.widget.ExtendedEntryText
                android:id="@+id/edt_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:eImeOptions="actionNext"
                app:eInputType="integer"
                app:eTitle="@string/card_number"
                app:eBoxSize="small"/>

            <com.jobtick.widget.ExtendedEntryText
                android:id="@+id/edt_expiry_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:eImeOptions="actionNext"
                app:eInputType="calendar"
                app:eTitle="@string/expiry_date"
                app:eBoxSize="small"/>

            <com.jobtick.widget.ExtendedEntryText
                android:id="@+id/edt_security_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:eImeOptions="actionDone"
                app:eInputType="integer"
                app:eTitle="@string/cvc"
                app:eBoxSize="small"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_card"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/form"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="center"
        android:padding="@dimen/spacing_large"
        android:text="Add credit card"
        style="@style/materialButton" />

</RelativeLayout>