<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calender_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DobReqFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_mlarge"
            android:textAppearance="@style/materialText_400_15"
            android:gravity="start"
            android:text="@string/provide_a_date_of_birth"
            android:textColor="@color/textColor" />

        <com.jobtick.android.widget.ExtendedEntryText
            android:id="@+id/txt_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:eTitle="@string/date_of_birth"
            app:eInputType="calendar"
            app:eImeOptions="normal"
            app:eBoxSize="small"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_xxlarge"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            style="@style/materialButton"
            android:text="@string/next"
            android:enabled="false" />

    </LinearLayout>
</FrameLayout>