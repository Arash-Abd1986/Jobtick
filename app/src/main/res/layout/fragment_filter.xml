<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FilterInPersonFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/lyt_btn_save_filter"
        android:overScrollMode="never">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jobtick.android.widget.ExtendedEntryText
                android:id="@+id/txt_suburb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                app:eInputType="suburb"
                app:eTitle="@string/suburb" />

            <LinearLayout
                android:id="@+id/distance_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mxlarge"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/materialText_400_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:text="Distance"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_distance_km"
                        style="@style/materialText_500_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:text="15 KM"
                        android:textColor="@color/textColor" />

                </RelativeLayout>


                <com.google.android.material.slider.Slider
                    android:id="@+id/sk_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layoutDirection="ltr"
                    android:max="101"
                    android:maxHeight="4dp"
                    android:minHeight="4dp"
                    android:mirrorForRtl="true"
                    android:paddingStart="0dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="0dp"
                    android:progress="15"
                    android:value="15"
                    android:valueFrom="0"
                    android:valueTo="101"
                    app:haloColor="@color/grey_E2E2E2"
                    app:labelBehavior="gone"
                    app:trackColorInactive="@color/grey_E2E2E2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mxlarge"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.textview.MaterialTextView
                        style="@style/materialText_400_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:text="Price"
                        android:textColor="@color/textColor" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_price_min_max"
                        style="@style/materialText_500_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:text="$ 5 - $ 9999"
                        android:textColor="@color/textColor" />

                </RelativeLayout>


                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/sk_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:maxHeight="4dp"
                    android:minHeight="4dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:valueFrom="5"
                    android:valueTo="9999"
                    app:haloColor="@color/grey_E2E2E2"
                    app:labelBehavior="gone"
                    app:trackColorInactive="@color/grey_E2E2E2"
                    app:values="@array/initial_slider_values_select_price" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_mxlarge"
                android:layout_marginEnd="@dimen/spacing_middle"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:orientation="horizontal">


                <com.google.android.material.textview.MaterialTextView
                    style="@style/materialText_400_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Show open jobs only"
                    android:textColor="@color/textColor" />


                <CheckBox
                    android:id="@+id/cb_open_tasks"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radio_group_on_off"
                    android:button="@null"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/lyt_btn_save_filter"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        style="@style/materialButton"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/apply"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>