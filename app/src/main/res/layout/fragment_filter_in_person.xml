<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FilterInPersonFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/card_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:elevation="@dimen/spacing_middle"
            app:cardCornerRadius="@dimen/spacing_middle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <com.jobtick.TextView.TextViewSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suburb"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold" />


                <com.jobtick.TextView.TextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_suburb"
                    android:inputType="textMultiLine"
                    android:drawableEnd="@drawable/ic_map_pin"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Union Ave, Austin"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:elevation="@dimen/spacing_middle"
            app:cardCornerRadius="@dimen/spacing_middle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Distance"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />

                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_distance_km"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/textColor"
                        android:text="15 KM"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <SeekBar
                    android:layout_marginEnd="-5dp"
                    android:layout_marginStart="-5dp"
                    android:layout_gravity="center"
                    android:id="@+id/sk_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:max="100"
                    android:mirrorForRtl="true"
                    android:progress="15"
                    android:progressBackgroundTint="@color/grey_40"
                    android:progressTint="@color/colorPrimary"
                    android:thumbOffset="@dimen/spacing_large"
                    android:thumbTint="@color/colorPrimary"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:elevation="@dimen/spacing_middle"
            app:cardCornerRadius="@dimen/spacing_middle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Price"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />

                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_price_min_max"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/textColor"
                        android:text="$ 5 - $ 9999"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <io.apptik.widget.MultiSlider
                    android:id="@+id/sk_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:thumbNumber="2"
                    app:scaleMin="0"
                    app:scaleMax="100"
                    app:stepsThumbsApart="11"
                    app:drawThumbsApart="true"
                    app:thumbColor="@color/colorPrimary"
                    app:rangeColor="@color/colorPrimary"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:orientation="horizontal">


            <com.jobtick.TextView.TextViewRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Show open tasks only"
                android:textColor="@color/textColor" />


            <CheckBox
                android:id="@+id/cb_open_tasks"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_large"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="@dimen/spacing_middle"
        app:cardCornerRadius="@dimen/spacing_medium">

        <LinearLayout
            android:id="@+id/lyt_btn_save_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <com.jobtick.TextView.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Filter"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>