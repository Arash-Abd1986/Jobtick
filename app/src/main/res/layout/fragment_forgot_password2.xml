<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_above="@+id/lyt_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp">

                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/imgLogo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher_round" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_xlarge"/>

                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create A New Password"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/textColor"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_xlarge"/>

                    <com.jobtick.TextView.TextViewRegular
                        android:lineSpacingExtra="@dimen/spacing_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_xxlarge"
                        android:layout_marginStart="@dimen/spacing_xxlarge"
                        android:text="Enter the verification code sent to your email."
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_600"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="top"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >










                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                android:layout_margin="@dimen/spacing_middle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="20dp"
                                app:cardCornerRadius="10dp">


                                <com.jobtick.EditText.EditTextMedium
                                    android:layout_margin="@dimen/spacing_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:id="@+id/edt_first"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />



                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                android:layout_margin="@dimen/spacing_middle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="20dp"
                                app:cardCornerRadius="10dp">



                                <com.jobtick.EditText.EditTextMedium
                                    android:layout_margin="@dimen/spacing_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:id="@+id/edt_second"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                android:layout_margin="@dimen/spacing_middle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="20dp"
                                app:cardCornerRadius="10dp">





                                <com.jobtick.EditText.EditTextMedium
                                    android:layout_margin="@dimen/spacing_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:id="@+id/edt_third"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />



                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                android:layout_margin="@dimen/spacing_middle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="20dp"
                                app:cardCornerRadius="10dp">





                                <com.jobtick.EditText.EditTextMedium
                                    android:layout_margin="@dimen/spacing_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:id="@+id/edt_four"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />



                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                android:layout_margin="@dimen/spacing_middle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="20dp"
                                app:cardCornerRadius="10dp">





                                <com.jobtick.EditText.EditTextMedium
                                    android:layout_margin="@dimen/spacing_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:id="@+id/edt_five"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />



                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                android:layout_margin="@dimen/spacing_middle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="20dp"
                                app:cardCornerRadius="10dp">





                                <com.jobtick.EditText.EditTextMedium
                                    android:layout_margin="@dimen/spacing_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:id="@+id/edt_six"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />



                            </androidx.cardview.widget.CardView>







                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/spacing_middle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="20dp"
                            app:cardCornerRadius="10dp">


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_margin="@dimen/spacing_middle"
                                android:id="@+id/parent_edt_new_password"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleDrawable="@drawable/password_selector"
                                app:startIconDrawable="@drawable/ic_lock"
                                android:hint="@string/new_password">

                                <com.jobtick.EditText.EditTextMedium
                                    android:background="@android:color/transparent"
                                    android:id="@+id/edt_new_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPassword"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/spacing_middle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="20dp"
                            app:cardCornerRadius="10dp">


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_margin="@dimen/spacing_middle"
                                android:id="@+id/parent_edt_repeat_new_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleDrawable="@drawable/password_selector"
                                app:startIconDrawable="@drawable/ic_lock"
                                android:hint="@string/repeat_new_password">

                                <com.jobtick.EditText.EditTextMedium
                                    android:background="@android:color/transparent"
                                    android:id="@+id/edt_repeat_new_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPassword"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_middle"/>


                    <com.jobtick.Button.ButtonRegular
                        android:id="@+id/btn_log_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:layout_marginEnd="@dimen/spacing_middle"
                        android:background="@drawable/btn_background_primary"
                        android:gravity="center"
                        android:text="@string/log_in"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="#ffffff" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_middle"/>










                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>





</RelativeLayout>
