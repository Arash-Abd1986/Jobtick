<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".material.ui.postajob.PostAJobSetTitleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:context=".material.ui.postajob.PostAJobSetTitleFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_back_black"
            app:tint="@color/neutral_light_500" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title"
            style="@style/body1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_search"
            android:drawableStart="@drawable/ic_search_v5"
            android:drawablePadding="4dp"
            android:paddingHorizontal="16dp"
            android:hint="Enter your suburb or postcode"
            android:textColor="@color/neutral_light_800" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"/>
</LinearLayout>