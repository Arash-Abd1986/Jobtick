<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey"
    android:orientation="vertical"
    tools:context=".fragments.MakeAnOfferReviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="@dimen/_10sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_32sp"
                    android:layout_height="@dimen/_32sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sp"
                    android:src="@drawable/ic_back"
                     />

                <com.jobtick.text_view.TextViewMedium
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sp"
                    android:text="Offer summary"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_18sp" />
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sp"
                    android:layout_marginEnd="@dimen/_5sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_marginBottom="@dimen/spacing_middle"
                        android:background="@drawable/bg_white_settings">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_10sp"
                            android:paddingTop="@dimen/_15sp"
                            android:paddingEnd="@dimen/_10sp"
                            android:paddingBottom="@dimen/_15sp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/img_info"
                                    android:layout_width="@dimen/_24sp"
                                    android:layout_height="@dimen/_24sp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_info2"
                                    app:tint="@color/colorPrimary"
                                     />

                                <com.jobtick.text_view.TextViewRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="@dimen/_10sp"
                                    android:layout_toEndOf="@+id/img_info"
                                    android:text="Once your offer is accepted, you agree to complete the job. Any cancellation may lead to deduction of cancellation fee."
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_13sp"
                                    android:lineHeight="20dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!--Poster Offer Design-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sp"
                        android:layout_marginTop="@dimen/_5sp"
                        android:layout_marginEnd="@dimen/_15sp"
                        android:layout_marginBottom="@dimen/_5sp"
                        android:background="@drawable/bg_poster_offer"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sp">

                        <com.jobtick.text_view.TextViewMedium
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sp"
                            android:layout_marginEnd="@dimen/_5sp"
                            android:layout_weight="1"
                            android:text="Your Offer"
                            android:textColor="@color/grey_70"
                            android:textSize="@dimen/_14sp" />

                        <com.jobtick.text_view.TextViewBold
                            android:id="@+id/txt_total_budget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_10sp"
                            android:text="$200"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_18sp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:background="@drawable/bg_white_settings">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_10sp"
                            android:paddingTop="@dimen/_10sp"
                            android:paddingBottom="@dimen/_10sp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.jobtick.text_view.TextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sp"
                                    android:text="Service Fee:"
                                    android:textColor="@color/grey_70"
                                    android:textSize="@dimen/_14sp" />

                                <com.jobtick.text_view.TextViewSemiBold
                                    android:id="@+id/txt_service_fee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/_15sp"
                                    android:text="$20"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_18sp" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_10sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.jobtick.text_view.TextViewSemiBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_5sp"
                                    android:text="Youâ€™ll Receive:"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_14sp" />

                                <com.jobtick.text_view.TextViewBold
                                    android:id="@+id/txt_receive_budget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/_15sp"
                                    android:text="$180"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_22sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/card_live_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/_15sp"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_marginBottom="@dimen/spacing_middle"
                        android:visibility="visible"
                        android:background="@color/backgroundLightGrey">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_offer_on_task"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:scaleType="centerCrop"
                                 />

                            <com.rishabhharit.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:scaleType="centerCrop"
                                app:cornerRadius="10dp" />

                            <ImageView
                                android:id="@+id/img_btn_close"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_x_circle"
                                android:visibility="gone"
                                 />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/_10sp">

                                <LinearLayout
                                    android:id="@+id/lytRecord2"
                                    android:layout_width="@dimen/_40sp"
                                    android:layout_height="@dimen/_40sp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_rounded_recording"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.jobtick.text_view.TextViewSemiBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="REC"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sp" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/img_btn_play"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginStart="@dimen/_10sp"
                                    android:src="@drawable/ic_play_circle"
                                     />
                            </LinearLayout>
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_xlarge" />

                <com.jobtick.text_view.TextViewRegular
                    android:id="@+id/txt_review_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/_12sp"
                    android:text="@string/review_conditions"
                    android:textSize="@dimen/_12sp"
                    android:lineHeight="17dp"
                    android:textColor="@color/grey_70"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_submit_offer"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/spacing_large"
                    android:layout_marginStart="@dimen/_10sp"
                    android:layout_marginEnd="@dimen/_10sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:elevation="@dimen/spacing_middle"
                    app:cardCornerRadius="@dimen/spacing_medium">

                    <LinearLayout
                        android:id="@+id/lyt_btn_submit_offer"
                        android:layout_width="370dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center">

                        <com.jobtick.text_view.TextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Submit offer"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
