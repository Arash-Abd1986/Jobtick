<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey"
    android:orientation="vertical"
    tools:context=".fragments.NewTaskAlertsRemoteFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="@dimen/_10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jobtick.widget.ExtendedEntryText
                android:id="@+id/edt_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:eTitle="Add a Keyword or Phrase"
                app:eInputType="text"
                app:eImeOptions="actionDone"
                app:eStartFocus="true"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_update_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/materialButton"
        android:text="@string/update_alert"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_large"/>

</RelativeLayout>