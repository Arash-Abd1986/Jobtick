<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".fragments.PaymentHistoryOutgoingFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:elevation="@dimen/spacing_middle"
        app:cardCornerRadius="@dimen/spacing_middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_rounded_grey_button">

                        <com.jobtick.TextView.TextViewMedium
                            android:layout_width="wrap_content"
                            android:text="All Time"
                            android:layout_gravity="center"
                            android:padding="@dimen/spacing_medium"

                            android:layout_height="wrap_content">

                        </com.jobtick.TextView.TextViewMedium>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_down_arrow"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_medium"
                            android:tint="@color/textColor"
                            android:layout_height="15dp">

                        </ImageView>
                        <Spinner
                            android:id="@+id/spinner_showing_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:entries="@array/array_name"
                            android:padding="@dimen/spacing_small" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/card_download_csv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/spacing_medium"
                        android:background="@drawable/ic_rounded_button">

                        <LinearLayout
                            android:id="@+id/lyt_btn_download_csv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_middle">

                            <com.jobtick.TextView.TextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DOWNLOAD CSV"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sp" />


                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_large" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <com.jobtick.TextView.TextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net Outgoing"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_14sp"
                            android:textStyle="bold" />

                        <com.jobtick.TextView.TextViewRegular
                            android:id="@+id/txt_total_transactions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 transactions"
                            android:textColor="@color/grey_40"
                            android:textSize="@dimen/_12sp" />


                    </LinearLayout>


                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_total_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="$ 265"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_20sp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </LinearLayout>


            <include layout=" @layout/item_payment_history" />

            <include layout="@layout/item_payment_history" />

            <include layout=" @layout/item_payment_history" />


            <include layout="@layout/item_payment_history" />

            <include layout=" @layout/item_payment_history" />


            <include layout="@layout/item_payment_history" />

            <include layout=" @layout/item_payment_history" />


            <include layout="@layout/item_payment_history" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>