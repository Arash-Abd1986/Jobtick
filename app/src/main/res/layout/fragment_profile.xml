<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/backgroundLightGrey"
    android:overScrollMode="never">

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_centerInParent="true"
        android:layout_width="36dp"
        android:layout_height="36dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
        android:visibility="visible"
        android:background="@color/backgroundLightGrey"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_100dp">

                <include layout="@layout/fragment_profile_title" />
                <include layout="@layout/fragment_profile_status" />
                <include layout="@layout/fragment_profile_level" />
                <include layout="@layout/fragment_profile_review" />
                <include layout="@layout/fragment_profile_about_me" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="@dimen/_20sp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:background="@drawable/bg_profile">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent">

                            <RadioGroup
                                android:id="@+id/rgTabs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sp"
                                android:layout_marginTop="@dimen/_20sp"
                                android:layout_marginEnd="@dimen/_20sp"
                                android:background="@drawable/radio_profile_bg"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/rbPortfollio"
                                    style="@style/materialText_600_14"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/radio_portfolio"
                                    android:button="@null"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:text="@string/portfolio"
                                    android:textColor="@color/N100"
                                    tools:ignore="TooDeepLayout"/>

                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/rbSkills"
                                    style="@style/materialText_600_14"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/radio_portfolio"
                                    android:button="@null"
                                    android:checked="false"
                                    android:gravity="center"
                                    android:text="@string/skills"
                                    android:textColor="@color/N600" />
                            </RadioGroup>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/lyt_skills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sp"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sp"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/lyt_experience"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sp"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    style="@style/materialText_500_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sp"
                                    android:text="Skills"
                                    android:textColor="@color/textColor" />

                                <co.lujun.androidtagview.TagContainerLayout
                                    android:id="@+id/tag_experience"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sp"
                                    app:container_background_color="@android:color/transparent"
                                    app:container_border_color="@android:color/transparent"
                                    app:container_border_radius="0dp"
                                    app:container_border_width="0dp"
                                    app:container_enable_drag="false"
                                    app:horizontal_interval="8dp"
                                    app:tag_background_color="#F4F4F5"
                                    app:tag_border_color="@android:color/transparent"
                                    app:tag_border_width="0dp"
                                    app:tag_clickable="false"
                                    app:tag_corner_radius="5dp"
                                    app:tag_text_color="#1A1848"
                                    app:tag_text_size="@dimen/_12sp"
                                    app:tag_theme="none"
                                    app:vertical_interval="8dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lyt_language"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sp"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    style="@style/materialText_500_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sp"
                                    android:text="@string/language"
                                    android:textColor="@color/textColor" />

                                <co.lujun.androidtagview.TagContainerLayout
                                    android:id="@+id/tag_language"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sp"
                                    app:container_background_color="@android:color/transparent"
                                    app:container_border_color="@android:color/transparent"
                                    app:container_border_radius="0dp"
                                    app:container_border_width="0dp"
                                    app:container_enable_drag="false"
                                    app:horizontal_interval="8dp"
                                    app:tag_background_color="#F4F4F5"
                                    app:tag_border_color="@android:color/transparent"
                                    app:tag_border_width="0dp"
                                    app:tag_clickable="false"
                                    app:tag_corner_radius="5dp"
                                    app:tag_text_color="#1A1848"
                                    app:tag_text_size="@dimen/_12sp"
                                    app:tag_theme="none"
                                    app:vertical_interval="8dp"
                                    tools:ignore="TooManyViews" />


                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lyt_education"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sp"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    style="@style/materialText_500_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sp"
                                    android:text="Education &amp; Certificates"
                                    android:textColor="@color/colorNavyBlue" />

                                <co.lujun.androidtagview.TagContainerLayout
                                    android:id="@+id/tag_education"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sp"
                                    app:container_background_color="@android:color/transparent"
                                    app:container_border_color="@android:color/transparent"
                                    app:container_border_radius="0dp"
                                    app:container_border_width="0dp"
                                    app:container_enable_drag="false"
                                    app:horizontal_interval="8dp"
                                    app:tag_background_color="#F4F4F5"
                                    app:tag_border_color="@android:color/transparent"
                                    app:tag_border_width="0dp"
                                    app:tag_clickable="false"
                                    app:tag_corner_radius="5dp"
                                    app:tag_text_color="#1A1848"
                                    app:tag_text_size="@dimen/_12sp"
                                    app:tag_theme="none"
                                    app:vertical_interval="8dp" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lyt_Port"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/_10sp"
                            android:paddingRight="@dimen/_10sp"
                            android:visibility="gone"
                            tools:ignore="TooManyViews">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_portfolio"
                                android:layout_width="match_parent"
                                android:descendantFocusability="blocksDescendants"
                                android:layout_height="wrap_content"
                                android:overScrollMode="never"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:id="@+id/llEnlarge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sp"
                                android:layout_marginBottom="@dimen/_10sp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sp"
                                    android:layout_marginEnd="@dimen/_5sp"
                                    android:contentDescription="@string/todo"
                                    android:padding="8dp"
                                    android:src="@drawable/ic_info" />

                                <com.google.android.material.textview.MaterialTextView
                                    style="@style/materialText_500_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_2sp"
                                    android:text="@string/click_to_enlarge"
                                    android:textColor="@color/textColor" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/no_port_folio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="20dp"
                            tools:ignore="TooManyViews"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/_50dp"
                                android:layout_height="@dimen/_50dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/spacing_large"
                                android:contentDescription="@string/todo"
                                android:padding="@dimen/_8dp"
                                android:src="@drawable/ic_group_10749" />

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/materialText_600_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/no_portfolio_added_yet" />

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/materialText_400_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/increase_your_chance_to_get_a_job_by" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt_add_portfolio"
                                style="@style/materialText_400_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/adding_portf"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/no_port_skill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="20dp"
                            tools:ignore="TooManyViews"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/_50dp"
                                android:layout_height="@dimen/_50dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/spacing_large"
                                android:contentDescription="@string/todo"
                                android:padding="@dimen/_8dp"
                                android:src="@drawable/ic_group_10749" />

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/materialText_600_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/no_skills_added_yet" />

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/materialText_400_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/increase_your_chance_to_get_a_job_by" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt_add_skill"
                                style="@style/materialText_400_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="adding your skills"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_get_quote"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/_10sp"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:backgroundTint="@color/colorReleasedMoney"
        android:elevation="@dimen/spacing_middle"
        app:cardCornerRadius="@dimen/spacing_medium">

        <LinearLayout
            android:id="@+id/lyt_btn_get_a_quote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="?attr/selectableItemBackground"
            android:gravity="center">

            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_600_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/_20sp"
                android:paddingRight="@dimen/_20sp"
                android:text="@string/get_quote"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>