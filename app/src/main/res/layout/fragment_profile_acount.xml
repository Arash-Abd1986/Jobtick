<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/header_new_design"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<LinearLayout
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_name_title"
        style="@style/materialText_400_12"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/back"
        android:layout_toStartOf="@+id/txt_action"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/profile_acounts_header"
        android:textColor="@color/neutral_light_500"
        tools:text="NAME" />
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_name_value"
            style="@style/materialText_400_12"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/profile_acounts_values"
            android:textColor="@color/neutral_light_700"
            tools:text="Username" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/new_design_chevron_right"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
        <View
            android:background="@color/neutral_light_50"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <LinearLayout
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_email_title"
                style="@style/materialText_400_12"
                android:layout_marginTop="16dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/back"
                android:layout_toStartOf="@+id/txt_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/profile_acounts_header"
                android:textColor="@color/neutral_light_500"
                tools:text="EMAIL ADDRESS" />
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_email_value"
                    style="@style/materialText_400_12"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/email_status"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profile_acounts_values"
                    android:textColor="@color/neutral_light_700"
                    tools:text="arash.abd1986@gmail.com" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/email_status"
                    style="@style/materialText_400_12"
                    android:maxLines="1"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profile_acounts_values"
                    android:textColor="@color/feedback"
                    tools:text="Verified"/>
            </RelativeLayout>
            <View
                android:background="@color/neutral_light_50"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/txt_change_email"
                style="@style/materialText_400_12"
                android:maxLines="1"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/profile_acounts_values"
                android:textColor="@color/primary_500"
                tools:text="Change Email Address"/>

        </LinearLayout>
        <View
            android:background="@color/neutral_light_50"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <LinearLayout
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_mobile_title"
                style="@style/materialText_400_12"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/profile_acounts_header"
                android:textColor="@color/neutral_light_500"
                tools:text="MOBILE NUMBER" />
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email"
                    style="@style/outlineTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="+6112345678"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/email_status"
                        android:layout_centerVertical="true"
                        android:maxLength="50"
                        android:minHeight="54dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/materialText_400_12"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/email_status"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profile_acounts_values"
                    android:textColor="@color/neutral_light_700"
                    tools:text="Username" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_number_status"
                    style="@style/materialText_400_12"
                    android:maxLines="1"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profile_acounts_values"
                    android:textColor="@color/primary_error"
                    tools:text="Not Verified"/>
            </RelativeLayout>

            <View
                android:background="@color/neutral_light_50"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/change_email"
                style="@style/materialText_400_12"
                android:maxLines="1"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/profile_acounts_values"
                android:textColor="@color/primary_500"
                tools:text="Verify Mobile Number"/>

        </LinearLayout>
        <View
            android:background="@color/neutral_light_50"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <LinearLayout
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_management_title"
                style="@style/materialText_400_12"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/back"
                android:layout_toStartOf="@+id/txt_action"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/profile_acounts_header"
                android:textColor="@color/neutral_light_500"
                tools:text="Account Management" />
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_name_value"
                    style="@style/materialText_400_12"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/profile_acounts_values"
                    android:textColor="@color/neutral_light_700"
                    tools:text="Delete Account" />
                <ImageView
                    android:src="@drawable/new_design_chevron_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:background="@color/neutral_light_50"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <LinearLayout
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_delete_account"
                android:gravity="center"
                style="@style/materialText_400_12"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/back"
                android:layout_toStartOf="@+id/txt_action"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/profile_acounts_values"
                android:textColor="@color/primary_error"
                tools:text="Logout" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>