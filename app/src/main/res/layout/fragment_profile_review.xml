<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.google.android.material.textview.MaterialTextView
            style="@style/materialText_W500_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sp"
            android:layout_marginBottom="@dimen/_10sp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/review"
            android:textColor="@color/N900" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvViewAllReviews"
            style="@style/materialText_W500_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_15sp"
            android:layout_marginBottom="@dimen/_10sp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/view_all"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ticker_review"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_reviews"
            android:orientation="vertical"
            android:padding="@dimen/_10sp"
            android:visibility="visible">

            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_600_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/as_ticker"
                android:textColor="@color/N300" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingbarAsTicker"
                    style="@style/CustumRatingBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="0.5"
                    android:theme="@style/Yellow.AppCompatRatingBar" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTickerReview"
                    style="@style/materialText_500_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTickerCompletionRate"
                    style="@style/materialText_500_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/materialText_500_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sp"
                    android:text="@string/job_success"
                    android:textColor="@color/N600" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_review"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_reviews"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sp"
            android:visibility="visible">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_no_review"
                style="@style/materialText_400_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/no_review"
                android:textColor="@color/grey_70"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/poster_review"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_reviews"
            android:orientation="vertical"
            android:padding="@dimen/_10sp"
            android:visibility="visible">

            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_600_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/as_poster"
                android:textColor="@color/N300" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingbarAsPoster"
                    style="@style/CustumRatingBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:theme="@style/Yellow.AppCompatRatingBar" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPosterReview"
                    style="@style/materialText_500_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPosterCompletionRate"
                    style="@style/materialText_500_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/materialText_500_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sp"
                    android:text="@string/job_success"
                    android:textColor="@color/N600" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>