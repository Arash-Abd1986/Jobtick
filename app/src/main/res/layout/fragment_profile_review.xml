<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_white"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:visibility="visible">
        <com.google.android.material.textview.MaterialTextView
            style="@style/materialText_W500_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/review"
            android:textColor="@color/N900" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_role"
            style="@style/materialText_W400_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="gone"
            android:text="@string/review"
            android:textColor="@color/N300" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvViewAllReviews"
            style="@style/materialText_W500_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sp"
            android:layout_marginBottom="@dimen/_10sp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/view_all"
            android:textColor="@color/blue" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <RadioGroup
            android:id="@+id/reviewTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/radio_profile_bg"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rbTicker"
                style="@style/materialText_600_14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/radio_portfolio"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="@string/as_a_ticker"
                tools:ignore="TooDeepLayout" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rbPoster"
                style="@style/materialText_600_14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/radio_portfolio"
                android:button="@null"

                android:checked="true"
                android:gravity="center"
                android:text="@string/as_a_poster"
                android:textColor="@color/N600" />

        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ln_ticker_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ticker_review"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:padding="@dimen/_10sp"
                android:visibility="visible">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ticker_review_num"
                    style="@style/materialText_W400_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/N900" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_ticker_NoReview"
                    style="@style/materialText_W400_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="No Review"
                    android:textColor="@color/N100"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

