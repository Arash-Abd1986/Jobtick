<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_large"
    android:layout_marginTop="@dimen/spacing_medium"
    android:layout_marginEnd="@dimen/spacing_large"
    android:layout_marginBottom="@dimen/spacing_middle"
    android:background="@drawable/bg_white"
    android:orientation="horizontal"
    android:padding="8dp"
    android:visibility="visible">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_title"
        style="@style/materialText_W500_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Profile status"
        android:textColor="@color/N300" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title"
        android:orientation="vertical"
        android:visibility="visible">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_account_level"
            style="@style/materialText_600_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="@string/level"
            android:textColor="@color/blue"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivLevelInfo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:src="@drawable/ic_info"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sp"
            android:weightSum="4">


            <ImageView
                android:id="@+id/im_account_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_completed_status" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                >

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/G300"
                    android:paddingHorizontal="10dp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/im_payment_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_completed_status" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                >

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/G300"
                    android:paddingHorizontal="10dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/im_skills_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_not_completed_status" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                >

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/N040"
                    android:paddingHorizontal="10dp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/im_alert_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_not_completed_status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="4">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_payment_status"
                style="@style/materialText_W500_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Payment"
                android:textColor="@color/N050" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_account_status"
                style="@style/materialText_W500_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Account"
                android:textColor="@color/N050" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_skills_status"
                style="@style/materialText_W500_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Skills"
                android:textColor="@color/N050" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_alert_status"
                style="@style/materialText_W500_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Job alert"
                android:textColor="@color/N050" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
