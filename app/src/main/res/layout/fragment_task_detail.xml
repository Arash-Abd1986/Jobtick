<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    tools:context=".fragments.TaskDetailFragment">

    <!--bottom sheet container-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:paddingBottom="80dp">

            <include layout="@layout/view_post_job_tab" />

            <com.jobtick.android.widget.ExtendedCommentText
                android:id="@+id/edt_title"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:eTitle="@string/job_title"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                app:eMinCharSize="10"
                app:eMaxCharSize="60"
                app:eIsMandatory="true"
                app:eSingleLine="true"
                app:eImeOptionsComment="actionNext"/>

            <com.jobtick.android.widget.ExtendedCommentText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:eTitle="@string/job_description"
                app:eIsMandatory="true"
                app:eMinCharSize="25"
                app:eMaxCharSize="500"
                app:eImeOptionsComment="normal"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                app:cardCornerRadius="@dimen/spacing_xmedium"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/materialText_400_13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/attachment"
                        android:textColor="@color/colorPrimary" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcAttachment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_show_attachment_1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_add_must_have"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:itemCount="3"
                tools:listitem="@layout/item_add_must_have" />

            <RelativeLayout
                android:id="@+id/rlt_add_must_have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/img_add_white"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_add_white"
                     />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/materialText_400_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/img_add_white"
                    android:text="@string/add_requirements"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/materialText_400_15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/can_the_job_be_done_remotely"
                    android:textColor="@color/textColor" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/checkbox_online"
                    android:layout_width="80dp"
                    android:scaleX="1.3"
                    android:paddingRight="10dp"
                    android:scaleY="1.3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:gravity="center" />
            </LinearLayout>


            <com.jobtick.android.widget.ExtendedEntryText
                android:id="@+id/txt_suburb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:eTitle="@string/location"
                app:eInputType="suburb"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="75dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        style="@style/materialButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="@string/next" />

    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior" />
</RelativeLayout>

