<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey"
    android:orientation="vertical">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fontFamily="@font/poppins_medium"
        app:contentInsetStartWithNavigation="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:navigationIcon="@drawable/ic_back"
        app:title="Verification code" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <com.jobtick.TextView.TextViewRegular
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:gravity="start"
            android:layout_marginStart="@dimen/horizontal_margin_double"
            android:layout_marginEnd="@dimen/horizontal_margin_double"
            android:text="@string/enter_verification_code"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey_70" />

        <com.jobtick.TextView.TextViewRegular
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:id="@+id/email_verify_message"
            android:gravity="start"
            android:layout_marginStart="@dimen/horizontal_margin_double"
            android:layout_marginEnd="@dimen/horizontal_margin_double"
            tools:text="dummy@dymmy.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey_70"
            android:layout_marginBottom="16dp"/>


        <LinearLayout
            android:id="@+id/lnr_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_double"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/horizontal_margin_double"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:background="@drawable/rectangle_round_corners_outlined"
            android:orientation="vertical"
            android:paddingStart="@dimen/horizontal_padding_double"
            android:paddingEnd="@dimen/horizontal_padding_double"
            android:paddingTop="@dimen/vertical_padding_double"
            android:paddingBottom="@dimen/vertical_padding_double">

            <com.jobtick.TextView.TextViewSemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/vertical_spacing_default"
                android:text="@string/email_verification_code"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical">

                <com.jobtick.EditText.EditTextRegular
                    android:id="@+id/edt_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_14sp"
                    android:digits="0123456789"
                    android:inputType="number"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lyt_btn_finish"
        style="@style/materialButton.medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_button_standard_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/margin_bottom_button"
        android:background="@color/blueButtons"
        android:text="@string/finish"
        android:textColor="@color/white" />

</RelativeLayout>
