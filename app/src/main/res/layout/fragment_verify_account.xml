<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey"
    android:orientation="vertical">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fontFamily="@font/poppins_medium"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Verification code" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <com.jobtick.TextView.TextViewRegular
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:gravity="start"
            android:layout_marginStart="@dimen/horizontal_margin_double"
            android:layout_marginEnd="@dimen/horizontal_margin_double"
            android:text="@string/enter_verification_code"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey_70" />

        <com.jobtick.TextView.TextViewRegular
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:id="@+id/email_verify_message"
            android:gravity="start"
            android:layout_marginStart="@dimen/horizontal_margin_double"
            android:layout_marginEnd="@dimen/horizontal_margin_double"
            tools:text="dummy@dymmy.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey_70"
            android:layout_marginBottom="16dp"/>


        <LinearLayout
            android:id="@+id/lnr_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_double"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/horizontal_margin_double"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:background="@drawable/rectangle_round_corners_outlined"
            android:orientation="vertical"
            android:paddingStart="@dimen/horizontal_padding_double"
            android:paddingTop="@dimen/vertical_padding_double"
            android:paddingBottom="@dimen/vertical_padding_double">

            <com.jobtick.TextView.TextViewSemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/vertical_spacing_default"
                android:text="@string/email_verification_code"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical">

                <com.jobtick.EditText.EditTextRegular
                    android:id="@+id/edt_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_14sp"
                    android:digits="0123456789"/>

            </LinearLayout>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/spacing_large"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="@dimen/spacing_middle"
            app:cardCornerRadius="@dimen/spacing_medium">

            <LinearLayout
                android:id="@+id/lyt_btn_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <com.jobtick.TextView.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finish"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_middle" />


    </LinearLayout>
</LinearLayout>
