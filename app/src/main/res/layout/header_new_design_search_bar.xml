<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_65dp">
<ImageView
    android:padding="5dp"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:src="@drawable/new_design_back_arrow"
    android:id="@+id/back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/editTextParent"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="11dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/back"
        android:layout_toStartOf="@+id/txt_action"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/neutral_light_50"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">
    <com.google.android.material.textfield.TextInputEditText
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/new_design_search"
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@null"
        android:hint="Write a message..."
        android:inputType="text"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:maxLines="50"
        android:minHeight="@dimen/_55dp"
        android:maxHeight="60dp" />
    </androidx.cardview.widget.CardView>
    <com.google.android.material.textview.MaterialTextView
        android:animateLayoutChanges="true"
        android:layout_marginEnd="12dp"
        android:id="@+id/txt_action"
        style="@style/materialText_400_12"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="16dp"
        android:textColor="@color/primary_500"
        android:text="add" />

</RelativeLayout>