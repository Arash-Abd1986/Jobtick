<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_large">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/pic" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_status"
                style="@style/materialText_600_12"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/_8sp"
                android:layout_marginBottom="@dimen/_5sp"
                android:background="@drawable/ic_online_offline"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/white"
                android:visibility="visible" />
        </FrameLayout>

        <View
            android:layout_width="@dimen/spacing_middle"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_title"
                    style="@style/materialText_600_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    tools:text="Clean my two bedroom apartment" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_user_name"
                    style="@style/materialText_400_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_toStartOf="@+id/txt_unseen_count"
                    android:textColor="@color/colorPrimary"
                    tools:text="Nathan Fox" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_unseen_count"
                    style="@style/materialText_600_12"
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:background="@drawable/round_shape_primary"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:text="0" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlt_last_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small">

                <ImageView
                    android:id="@+id/img_gallery"
                    android:layout_width="@dimen/_12sp"
                    android:layout_height="@dimen/_12sp"
                    android:layout_alignParentEnd="@dimen/spacing_small"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_gallery" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_last_message"
                    style="@style/materialText_600_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/txt_time_status"
                    android:layout_toEndOf="@+id/img_gallery"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="left"
                    android:textColor="@color/textColor"
                    tools:text="Hi, is 8:30 pm good?"
                    tools:ignore="RtlHardcoded" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_time_status"
                    style="@style/materialText_500_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/grey_70"
                    tools:text="20 min. ago" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_line"
        android:layout_marginStart="90dp"
        android:background="@color/grey_10" />
</LinearLayout>