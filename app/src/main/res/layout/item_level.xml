<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/category_container">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.jobtick.android.widget.CircularProgressView
                android:id="@+id/progress_level1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:inCircleColor="#EBECF0"
                app:lineWidth="5dp"
                app:outCircleColor="#F0F0F0"
                app:progressColor="@color/N090"
                app:textBold="true"
                app:textColor="@color/N090" />

            <ImageView
                android:id="@+id/ivMedalBoronz"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_level1_deactive" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_level_title"
                    style="@style/materialText_W400_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Level 1"
                    android:textColor="@color/N900" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_info"
                    style="@style/materialText_W400_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="Level 1"
                    android:textColor="@color/P300" />
            </RelativeLayout>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_description"
                style="@style/materialText_W400_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Level 1"
                android:textColor="@color/N600" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>