<?xml version="1.0" encoding="utf-8"?>
<com.jobtick.android.relativelayout.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:background="@drawable/back_gray_gray_corner_8"
    android:orientation="horizontal"
    android:padding="1dp">


    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:cornerRadius="@dimen/_8dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/add"
        android:padding="30dp"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_plus" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/error"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_error_v3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pdf"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_picture_as_pdf" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtMore"
        style="@style/heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_500"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:background="@drawable/radio_button_attachmetns"
        android:button="@null"
        android:gravity="center"
        android:visibility="gone" />
</com.jobtick.android.relativelayout.SquareRelativeLayout>