<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/row_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_large">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"

            android:layout_marginEnd="@dimen/spacing_large"
            android:src="@drawable/pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivProfile"
            android:orientation="vertical">


            <WebView
                android:id="@+id/webviewNotificationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!--
                     <web
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Clean my two bedroom apartment"
                         android:textStyle="bold"
                         android:id="@+id/txtNotificationTitle"
                         android:textColor="@color/black"
                         android:textSize="12sp"/>-->


            <com.jobtick.TextView.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nathan Fox"
                android:textColor="@color/grey_40"
                android:textSize="12sp"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.jobtick.TextView.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Give A Review"
                    android:textColor="@color/colorPrimary"

                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/spacing_small"
                    android:backgroundTint="@color/green"
                    app:cardCornerRadius="@dimen/spacing_middle">

                    <!-- <LinearLayout
                         android:gravity="center"
                         android:layout_gravity="center_vertical"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_margin="@dimen/spacing_middle"
                         android:background="?attr/selectableItemBackground"
                         >-->
                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txtStatus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:padding="@dimen/_8dp"
                        android:text="comleted"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/spacing_middle"
                        android:visibility="gone" />
                    <!--     </LinearLayout>-->


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <com.jobtick.TextView.TextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_3sp"
                android:layout_marginRight="@dimen/_15sp"
                android:text="1m"

                android:textColor="@color/grey_70"
                android:textSize="@dimen/_11sp"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_line"
                android:layout_marginTop="@dimen/_8sp"
                android:layout_marginRight="@dimen/_15sp"
                android:background="#E2E2E2" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>