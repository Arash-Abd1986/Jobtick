<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_large"
    android:background="@color/backgroundLightGrey">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivProfile"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:src="@drawable/pic" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/notification_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Congrats Moh Your offer has been accepted on the job new better job 01"
        android:textColor="@color/textColor"
        android:textAppearance="@style/materialText_400_14"
        android:layout_toEndOf="@id/ivProfile"
        android:layout_alignParentEnd="true"
        android:lineHeight="21dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/notification_title"
        android:layout_marginTop="4dp"
        android:text="1m"
        android:textColor="@color/grey_70"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_alignStart="@id/notification_title"
        android:layout_alignEnd="@id/notification_time"
        android:layout_below="@id/notification_time"
        android:background="#E2E2E2" />

</RelativeLayout>