<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rlt_profile"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pic" />


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:background="@drawable/ic_level_1" />


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:id="@+id/img_verified_account"
                    android:background="@drawable/ic_correct" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linear_user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_middle"
                android:layout_toStartOf="@+id/lyt_budget_status"
                android:layout_toEndOf="@+id/rlt_profile"
                android:orientation="vertical">


                <com.jobtick.TextView.TextViewBold
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Nathan Fox"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingbar_worker"
                        style="@style/Yellow.Small.AppCompatRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />


                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_rating_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.jobtick.TextView.TextViewRegular
                    android:id="@+id/txt_completion_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0% Completion Rate"
                    android:textColor="@color/_4f4f4f"
                    android:textSize="12sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lyt_budget_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <com.jobtick.TextView.TextViewBold
                    android:id="@+id/txt_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="$ 200"

                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_accept"
                            android:layout_width="@dimen/_70dp"
                            android:layout_height="@dimen/_35sp"
                            android:layout_margin="@dimen/spacing_line"
                            android:backgroundTint="@color/green"
                            android:elevation="@dimen/spacing_middle"
                            app:cardCornerRadius="@dimen/spacing_middle">

                            <TextView
                                android:id="@+id/txt_btn_accept"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:text="ACCEPT"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_deleteOffer"
                            android:layout_width="@dimen/_100dp"
                            android:layout_height="@dimen/_35sp"
                            android:layout_margin="@dimen/spacing_line"
                            android:backgroundTint="@color/colorDeleteOffer"
                            android:elevation="@dimen/spacing_middle"
                            app:cardCornerRadius="@dimen/spacing_middle">

                            <TextView
                                android:id="@+id/txt_delete_offer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:text="withdraw offer"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sp" />
                        </androidx.cardview.widget.CardView>



                    </FrameLayout>

                    <TextView
                        android:id="@+id/textViewOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="@dimen/spacing_medium"
                        android:paddingRight="@dimen/spacing_medium"
                        android:text="&#8942;"
                        android:textAppearance="?android:textAppearanceLarge" />


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_middle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.jobtick.TextView.TextViewBold
                android:id="@+id/txt_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/txt_created_date"
                android:text="Message"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />


            <com.jobtick.TextView.TextViewRegular
                android:id="@+id/txt_created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="21 min. ago"
                android:textColor="@color/grey_40"
                android:textSize="@dimen/_12sp" />

        </RelativeLayout>

        <com.jobtick.TextView.TextViewRegular
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adipisicing adipisicing commodo Lorem enim si adipis adipisicing commodo Lorem enim si..."
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_live_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_line"
            android:layout_marginTop="@dimen/spacing_line"
            android:layout_marginEnd="@dimen/spacing_line"
            android:layout_marginBottom="@dimen/spacing_line"
            android:elevation="@dimen/spacing_mlarge"
            app:cardCornerRadius="@dimen/spacing_middle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_offer_on_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                     />

                <ImageView
                    android:id="@+id/img_btn_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_circle" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/lyt_btn_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small">

                <ImageView
                    android:layout_width="@dimen/_16sp"
                    android:layout_height="@dimen/_16sp"
                    android:src="@drawable/ic_corner_up_left"
                    android:tint="@color/colorPrimary" />

                <com.jobtick.TextView.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:gravity="center_vertical"
                    android:text="Reply"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lyt_btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_more_less_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/colorPrimary" />

                <com.jobtick.TextView.TextViewBold
                    android:id="@+id/txt_more_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:gravity="center_vertical"
                    android:text="More"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">


            <View
                android:layout_width="@dimen/spacing_line"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/spacing_large"
                android:background="@color/grey_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.jobtick.TextView.TextViewBold
                android:id="@+id/txt_more_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_small"
                android:text="7 more replies"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/recycler_view_offer_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:overScrollMode="never" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_line"
        android:background="@color/grey_10" />


</LinearLayout>
