<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorF8F8F8"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_large"

        android:paddingBottom="@dimen/spacing_middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rlt_profile"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <!--                <com.mikhaellopez.circularimageview.CircularImageView
                                    android:id="@+id/img_avatar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pic" />-->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_place_holder" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/img_user_avatar"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/img_account_shield"
                            android:layout_width="@dimen/_15sp"
                            android:layout_height="@dimen/_15sp"
                            android:layout_alignParentBottom="true"

                            android:src="@drawable/ic_shield" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_account_level"
                        android:layout_width="25dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_8sp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_user_level"
                        android:visibility="gone" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:background="@drawable/ic_level_1"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/img_verified_account"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/spacing_small"

                    android:layout_marginBottom="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:background="@drawable/ic_correct"
                    android:visibility="gone" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linear_user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rlt_profile"
                android:orientation="vertical">


                <com.jobtick.TextView.TextViewSemiBold
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Nathan Fox"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jobtick.TextView.TextViewMedium
                        android:id="@+id/txt_completion_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/green"
                        android:textSize="13sp" />

                    <com.jobtick.TextView.TextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Job Success"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="13sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <!--  <androidx.appcompat.widget.AppCompatRatingBar
                          android:id="@+id/ratingbar_worker"
                          style="@style/Yellow.Small.AppCompatRatingBar"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:numStars="1"
                          android:stepSize="0.5"
                          android:theme="@style/Yellow.Small.AppCompatRatingBar" />
  -->


                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingbar_worker"
                        style="@style/CustumRatingBar"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:numStars="1"
                        android:rating="1"
                        android:stepSize="0.5"
                        android:theme="@style/Yellow.AppCompatRatingBar" />


                    <com.jobtick.TextView.TextViewRegular
                        android:id="@+id/txt_rating_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="4.4(20)"
                        android:textColor="#FF922B"
                        android:textSize="@dimen/_13sp" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </ImageView>

            <LinearLayout
                android:id="@+id/lyt_btn_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small">

                <ImageView
                    android:id="@+id/ivFlag"
                    android:layout_width="@dimen/_16sp"
                    android:layout_height="@dimen/_16sp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:src="@drawable/ic_red_flag" />


                <ImageView
                    android:layout_width="@dimen/_16sp"
                    android:layout_height="@dimen/_16sp"
                    android:src="@drawable/ic_corner_up_left"
                    android:tint="@color/colorPrimary" />

                <com.jobtick.TextView.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:gravity="center_vertical"
                    android:text="Reply"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearAcceptDeleteOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sp"
            android:background="@drawable/linear_rounded_f0f0f0_fill">

            <LinearLayout
                android:id="@+id/lyt_budget_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sp"
                android:orientation="horizontal"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_16sp"
                    android:layout_weight="0.5"
                    android:background="@drawable/linear_rounded_blue_fill"
                    android:gravity="center">

                    <com.jobtick.TextView.TextViewBold
                        android:id="@+id/txt_budget"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="$ 200"

                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_20sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_accept"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45dp"
                            android:layout_margin="@dimen/spacing_line"
                            android:backgroundTint="@color/colorPrimary"
                            app:cardCornerRadius="@dimen/spacing_small"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/txt_btn_accept"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:text="Accept Offer"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_deleteOffer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45dp"
                            android:layout_margin="@dimen/spacing_line"
                            android:backgroundTint="@color/colorDeleteOffer"
                            android:elevation="@dimen/spacing_middle"
                            android:visibility="gone"

                            app:cardCornerRadius="@dimen/spacing_small">

                            <TextView
                                android:id="@+id/txt_delete_offer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:text="withdraw offer"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sp" />
                        </androidx.cardview.widget.CardView>


                    </FrameLayout>

                    <TextView
                        android:id="@+id/textViewOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/spacing_medium"
                        android:paddingRight="@dimen/spacing_medium"
                        android:text="&#8942;"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_middle" />


        <com.jobtick.TextView.TextViewRegular
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adipisicing adipisicing commodo Lorem enim si adipis adipisicing commodo Lorem enim si..."
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_medium" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_live_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_line"
            android:layout_marginTop="@dimen/spacing_line"
            android:layout_marginEnd="@dimen/spacing_line"
            android:layout_marginBottom="@dimen/spacing_line"
            android:elevation="@dimen/spacing_mlarge"
            app:cardCornerRadius="@dimen/spacing_middle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_offer_on_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img_btn_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_circle" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <com.jobtick.TextView.TextViewRegular
            android:id="@+id/txt_created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sp"
            android:text="21 min. ago"
            android:textColor="@color/grey_40"
            android:textSize="@dimen/_12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/lyt_btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_more_less_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/colorPrimary" />

                <com.jobtick.TextView.TextViewBold
                    android:id="@+id/txt_more_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:gravity="center_vertical"
                    android:text="More"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <View
                android:layout_width="@dimen/spacing_xsmall"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/spacing_large"
                android:background="@color/grey_E2E2E2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linear_more_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="36dp"
                    android:layout_height="@dimen/_1sp"
                    android:layout_gravity="center"
                    android:background="#2B3240"></View>

                <com.jobtick.TextView.TextViewMedium
                    android:id="@+id/txt_more_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_small"
                    android:text="7 more replies"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/recycler_view_offer_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:overScrollMode="never" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_line"
        android:background="@color/grey_10" />


</LinearLayout>
