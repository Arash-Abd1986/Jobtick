<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/pic"
            app:civ_border="false" />


        <com.jobtick.TextView.TextViewBold
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/nathan_fox"
            android:textColor="@color/textColor"
            android:textSize="11dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ivFlag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_8dp"
                android:padding="@dimen/spacing_small"
                android:src="@drawable/ic_red_flag" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_btn_reply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:padding="@dimen/spacing_small"
                android:src="@drawable/ic_corner_up_left"
                android:tint="@color/colorPrimary" />

            <com.jobtick.TextView.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:gravity="center_vertical"
                android:text="Reply"
                android:textColor="@color/colorPrimary"
                android:textSize="11dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <com.jobtick.TextView.TextViewRegular
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adipisicing adipisicing commodo Lorem enim si adipis adipisicing commodo Lorem enim si..."
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:overScrollMode="never" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_img_file"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/spacing_small"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/spacing_middle"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gallery" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.jobtick.TextView.TextViewRegular
                android:id="@+id/txt_created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:text="21 min. ago"
                android:textColor="@color/grey_40"
                android:textSize="@dimen/spacing_middle" />


            <LinearLayout
                android:id="@+id/lyt_btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small">

                <ImageView
                    android:id="@+id/img_more_less_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/colorPrimary" />

                <com.jobtick.TextView.TextViewBold
                    android:id="@+id/txt_more_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:gravity="center_vertical"
                    android:text="More"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/spacing_middle"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/spacing_large"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/spacing_xsmall"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/spacing_large"
                android:background="@color/grey_E2E2E2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.jobtick.TextView.TextViewBold
                android:id="@+id/txt_more_reply_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_small"
                android:text="7 more replies"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/spacing_middle"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_questions_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:overScrollMode="never" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>