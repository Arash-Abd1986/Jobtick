<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.mikhaellopez.circularimageview.CircularImageView
            app:civ_circle_color="@color/secondary_s50"
            android:id="@+id/imgView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/new_design_person" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgView"
            android:singleLine="true"
            tools:text="Clean my two bedroom apartment"
            android:textColor="@color/neutral_light_700"
            android:textSize="16dp" />

</RelativeLayout>