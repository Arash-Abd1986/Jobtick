<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/item_keyword">

    <ImageView
        android:id="@+id/img_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/spacing_medium"
        android:src="@drawable/ic_minus_primary"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginStart="12dp"
        android:text="Keyword"
        android:textColor="@color/textColor"
        android:textAppearance="@style/materialText_500_16"
        android:layout_toEndOf="@id/img_minus"
        android:layout_alignParentTop="true"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_type_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="type"
        android:textColor="@color/grey_70"
        android:layout_below="@id/txt_keyword"
        android:layout_toEndOf="@id/img_minus"
        android:textAppearance="@style/materialText_400_12" />

</RelativeLayout>