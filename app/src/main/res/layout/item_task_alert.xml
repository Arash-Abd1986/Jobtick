<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/item_keyword">

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/spacing_medium"
        android:src="@drawable/ic_check_square"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
         />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@id/check"
        android:singleLine="true"
        android:text="Keyword"
        android:textAppearance="@style/materialText_W500_16"
        android:textColor="@color/textColor" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_type_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="type"
        android:layout_marginEnd="40dp"
        android:textColor="@color/N600"
        android:layout_below="@id/txt_keyword"
        android:layout_toEndOf="@id/check"
        android:textAppearance="@style/materialText_W400_12" />

    <ImageView
        android:id="@+id/img_minus"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/spacing_medium"
        android:src="@drawable/ic_close_v3" />
</RelativeLayout>