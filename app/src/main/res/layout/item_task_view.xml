<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_task_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="6dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="6dp"
    card_view:cardBackgroundColor="@color/colorRed"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <!-- due to problem with text status when it is completed, we use larger image -->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_avatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:src="@drawable/pic"
                card_view:civ_border="false" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="@style/materialText_400_14"
                    android:textColor="@color/N900"
                    tools:text="@string/clean_my_two_bedroom_apartment"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@id/img_avatar"
                    android:gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/location_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/img_avatar"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_map_pin" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/no_location_set"
                    android:textAppearance="@style/materialText_400_12"
                    android:textColor="@color/N300" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/calendar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_container"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_calendar" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_due_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/no_date_set"
                    android:textAppearance="@style/materialText_400_12"
                    android:textColor="@color/N300" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendar_container"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_clock_10" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_due_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textAppearance="@style/materialText_400_12"
                    android:textColor="@color/N300"
                    android:text="No time set" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_offer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/shape_rounded_white_5dp"
                    android:backgroundTint="@color/N030"
                    android:gravity="start"
                    android:lines="1"
                    android:paddingStart="4dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="3dp"
                    android:paddingBottom="3dp"
                    tools:text="99"
                    android:drawableEnd="@drawable/inset_user"
                    android:textAppearance="@style/materialText_400_12"
                    android:textColor="@color/N900" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="start"
                    android:lines="1"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    tools:text="@string/completed"
                    android:textAppearance="@style/materialText_400_12"
                    android:textColor="@color/grey_70" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_trash_hollow_red_16dp"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rectangle_card_round_corners_outlined_red_button"
                    android:textAppearance="@style/materialText_400_12"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/R300"
                    android:text=" Delete" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_status_draft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="start"
                    android:lines="1"
                    android:background="@drawable/shape_rounded_gray_light"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="8dp"
                    android:visibility="gone"
                    android:paddingBottom="2dp"
                    tools:text="@string/drafted"
                    android:textAppearance="@style/materialText_400_12"
                    android:textColor="@color/grey_70" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="4dp"
                    android:gravity="end|center_vertical"
                    tools:text="@string/_200"
                    android:textAppearance="@style/materialText_400_16"
                    android:textColor="@color/P300" />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>

