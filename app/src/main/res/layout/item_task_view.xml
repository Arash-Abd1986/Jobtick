<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_task_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="4dp"
    card_view:cardBackgroundColor="@color/colorRed"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <RelativeLayout
                android:id="@+id/lyt_task_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/separator"
                android:layout_alignBottom="@id/separator"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:orientation="vertical">

                <!-- due to problem with text status when it is completed, we use larger image -->
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:src="@drawable/pic"
                    card_view:civ_border="false" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_rounded_gray_light"
                        android:layout_marginBottom="6dp"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="3dp"
                        android:text="@string/completed"
                        android:textAppearance="@style/materialText_600_08"
                        android:textColor="@color/grey_70" />

            </RelativeLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="@dimen/spacing_line"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/title_container"
                android:layout_alignBottom="@id/price_container"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/lyt_task_profile"
                android:background="@color/grey_10" />

            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/separator"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/clean_my_two_bedroom_apartment"
                    android:textAppearance="@style/materialText_500_14"
                    android:textColor="@color/textColor" />

                <ImageView
                    android:id="@+id/tv_delete"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_delete"
                    android:visibility="gone"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_container"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/separator"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_map_pin"
                     />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/no_location_set"
                    android:textAppearance="@style/materialText_400_12"
                    android:textColor="@color/grey_70" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/calendar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_container"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/separator"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_calendar"
                     />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_due_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/no_date_set"
                    android:textAppearance="@style/materialText_400_12"
                    android:textColor="@color/grey_70" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendar_container"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/separator"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_clock_10"
                     />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_due_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="@string/_22222"
                    android:textAppearance="@style/materialText_400_12"
                    android:textColor="@color/grey_70" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_offer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/shape_rounded_white_5dp"
                    android:backgroundTint="@color/greyF3F3F3"
                    android:gravity="start"
                    android:lines="1"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:text="@string/_4_offers"
                    android:textAppearance="@style/materialText_600_10"
                    android:textColor="#4D576A" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_budget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/_200"
                    android:textAppearance="@style/materialText_700_18"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>

