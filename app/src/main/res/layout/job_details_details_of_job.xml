<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.jobtick.android.widget.ExtendedAlertBox
        android:id="@+id/alert_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sp"
        android:layout_marginTop="@dimen/_18sp"
        android:layout_marginEnd="@dimen/_16sp"
        android:visibility="gone"
        app:eAlertButtonText="@string/view_cancellation_request"
        app:eAlertTitle="You have requested to cancel this job on 9th Dec. 2020 9:45 PM" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/_13sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/_13sp"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:orientation="horizontal">
       <com.jobtick.android.widget.StatusLayout
           android:id="@+id/lyt_status"
           android:layout_alignParentStart="true"
           android:layout_width="wrap_content"
           app:status="@string/completed"
           android:layout_height="wrap_content"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_title"
            style="@style/materialText_700_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_smlarge"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/spacing_smlarge"
            android:layout_marginBottom="3dp"
            android:textColor="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/spacing_smlarge"
            android:layout_marginEnd="@dimen/spacing_smlarge"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/llLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/img_map_pin"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_map_pin" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_location"
                    style="@style/fontSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    tools:text="123" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_created_date"
                    style="@style/fontSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/grey_70"
                    tools:text="123" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_description"
            style="@style/materialText_500_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginStart="@dimen/spacing_smlarge"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/spacing_smlarge"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:lineSpacingExtra="@dimen/_3dp"
            android:textColor="@color/textColor" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mustHaveLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="@dimen/spacing_middle"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:visibility="gone"
            app:cardBackgroundColor="#FFEDED"
            app:cardCornerRadius="@dimen/spacing_xmedium"
            app:cardElevation="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mustHaveList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:listitem="@layout/item_must_have" />

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/lineOpen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_line"
            android:layout_marginTop="15dp"
            android:background="@color/grey_10"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/relPrivateChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/etPrivateChat"
                style="@style/materialText_600_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/spacing_smlarge"
                android:layout_marginTop="@dimen/spacing_smlarge"
                android:text="@string/private_chat"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPrivateChat"
                android:layout_marginStart="@dimen/spacing_smlarge"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginEnd="@dimen/spacing_smlarge"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relProfileChat"
                    android:layout_width="55dp"
                    android:layout_height="63dp">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imgAvatarChat"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_place_holder"
                        app:civ_border="false" />

                    <ImageView
                        android:id="@+id/imgAccountShieldChat"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_shield"
                        android:visibility="gone" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llChatProfile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvPrivateChatName"
                        style="@style/materialText_600_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvPrivateChatLocation"
                        style="@style/fontSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/grey_40" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvPrivateChatLastOnline"
                        style="@style/fontSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_40"
                        app:layout_anchor="@+id/nested_scroll_view"
                        app:layout_anchorGravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBtnPrivateMessageDisable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/spacing_small"
                    android:background="@drawable/greay_border_bg"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="@dimen/_8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/spacing_small"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_message" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/materialText_500_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:text="@string/chat"
                        android:textColor="#C9C9C9" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBtnPrivateMessageEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/spacing_small"
                    android:background="@drawable/chat_active_bg"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="@dimen/_8dp"
                    android:paddingBottom="8dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/spacing_small"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_message_active" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/materialText_500_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:text="@string/chat"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/postedByLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPostedBy"
                style="@style/materialText_600_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/spacing_smlarge"
                android:layout_marginTop="@dimen/spacing_smlarge"
                android:text="@string/posted_by"
                android:textColor="@color/N900" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPostedBy"
                android:layout_marginStart="@dimen/spacing_smlarge"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/spacing_smlarge"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relativProfile"
                    android:layout_width="55dp"
                    android:layout_height="63dp">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/img_avtar_poster"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_place_holder"
                        app:civ_border="false" />

                    <ImageView
                        android:id="@+id/img_account_shield"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_shield"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_account_level"
                        android:layout_width="25dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_8sp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_user_level"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearUserProfile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_poster_name"
                        style="@style/materialText_600_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_poster_location"
                        style="@style/fontSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/grey_40" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_poster_last_online"
                        style="@style/fontSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_40"
                        app:layout_anchor="@+id/nested_scroll_view"
                        app:layout_anchorGravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBtnPosterMessageEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/spacing_small"
                    android:background="@drawable/chat_active_bg"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="@dimen/_8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/spacing_small"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_message_active" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/materialText_600_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:text="@string/message"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_btn_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/spacing_small"
                    android:background="@drawable/shape_rounded_back_button_deactive"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="@dimen/_8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/spacing_small"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_message_active" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/materialText_600_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:text="@string/message"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_line"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@color/grey_10" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_offer_count"
            style="@style/materialText_600_14"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_large"
            android:text="@string/_4_offers"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_budget"
            style="@style/materialText_700_28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_smlarge"
            android:layout_marginEnd="@dimen/spacing_smlarge"
            android:gravity="center"
            android:text="@string/_200"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>