<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:elevation="0dp">


    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:collapsedTitleTextAppearance="@style/transparentTitleBar"
        app:contentScrim="@color/transparentLight"
        app:layout_collapseMode="parallax"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:scrimVisibleHeightTrigger="80dp"
        app:titleEnabled="false"
        app:toolbarId="@id/toolbar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="320dp">

                <LinearLayout
                    android:id="@+id/lyt_btn_view_all_offers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/materialText_500_12"
                        tools:ignore="TooDeepLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/view_all_offers"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:elevation="5dp"
                    android:translationZ="2dp" />
            </androidx.viewpager.widget.ViewPager>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/shape_tab_left_white"
                android:contentDescription="@string/todo"
                android:gravity="center"
                android:paddingStart="@dimen/spacing_middle"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                app:srcCompat="@drawable/ic_clock_task_details" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_due_date"
                style="@style/materialText_500_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                android:textColor="@color/textColor" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_due_time"
                style="@style/materialText_500_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/shape_tab_right_white"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingEnd="@dimen/spacing_middle"
                android:paddingBottom="@dimen/spacing_medium"
                android:textColor="@color/textColor" />

            <FrameLayout
                tools:ignore="UselessLeaf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_budgets"
                style="@style/materialText_500_18"
                tools:text="@string/_200"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/shape_tab_primary"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/layout_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" />
        </RelativeLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top"
            android:layout_marginBottom="14dp"
            android:background="@color/transparentWhite"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_collapseMode="pin"
            app:menu="@menu/menu_task_details"
            app:navigationIcon="@drawable/ic_chevron_left_while_background_grey_32dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleMarginStart="-25dp"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>
