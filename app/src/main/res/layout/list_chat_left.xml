<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spacing_middle"
    android:paddingLeft="@dimen/spacing_middle"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingEnd="@dimen/spacing_middle"
    android:paddingRight="@dimen/spacing_middle"
    android:paddingBottom="@dimen/spacing_medium">

    <RelativeLayout
        android:id="@+id/layoutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            style="@style/materialText_500_12"
            android:id="@+id/txtOnlyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="@drawable/rounded_date_dark"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle"
            tools:text="11-06-2016"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDate"
        android:background="@drawable/shape_bg_chat_dark"
        android:layout_alignParentStart="true">

        <com.google.android.material.textview.MaterialTextView
            style="@style/materialText_500_14"
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/spacing_medium"
            tools:text="@string/me"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/textLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_alignParentStart="true">

            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_500_14"
                android:id="@+id/txtShowMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                tools:text="Username"
                android:textColor="@color/white"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/imgPath_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="10dp"
                android:visibility="visible">
            <ImageView
                android:id="@+id/imgPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_left"
                android:gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/image_load"
                android:transitionName="@string/app_name"
                android:visibility="visible"
                android:contentDescription="@string/todo" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                style="@style/materialText_500_10"
                android:id="@+id/txtMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:gravity="end"
                tools:text="11:40"
                android:textColor="@color/timeColor"/>

            <ImageView
                android:id="@+id/imgMsgSeen"
                android:layout_width="25dp"
                android:visibility="visible"
                android:layout_height="25dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_vector__7_"
                android:contentDescription="@string/todo" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
