<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spacing_middle"
    android:paddingLeft="@dimen/spacing_middle"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingEnd="@dimen/spacing_middle"
    android:paddingRight="@dimen/spacing_middle"
    android:paddingBottom="@dimen/spacing_medium">

    <RelativeLayout
        android:id="@+id/layoutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtOnlyDate"
            style="@style/materialText_500_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="@drawable/rounded_date_dark"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:text="11-06-2016" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDate"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape_bg_chat_dark">


        <androidx.cardview.widget.CardView
            android:id="@+id/view_text_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:maxHeight="76dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colorTaskCompleted"
            app:cardCornerRadius="10dp">

            <include layout="@layout/view_text_chat" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/view_file_chat"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_margin="3dp"
            android:maxHeight="76dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorTaskCompleted"
            app:cardCornerRadius="10dp">

            <include layout="@layout/view_file_chat" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>
