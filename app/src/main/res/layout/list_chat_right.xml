<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spacing_middle"
    android:paddingLeft="@dimen/spacing_middle"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingEnd="@dimen/spacing_middle"
    android:paddingRight="@dimen/spacing_middle"
    android:paddingBottom="@dimen/spacing_medium">

    <RelativeLayout
        android:id="@+id/layoutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtOnlyDate"
            style="@style/materialText_500_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="@drawable/rounded_date_dark"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:text="11-06-2016" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDate"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shapr_bg_chat_primary">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtName"
            style="@style/materialText_500_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/spacing_medium"
            android:text="@string/me"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/textLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_alignParentStart="true">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtShowMessage"
                style="@style/materialText_500_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:text="Username" />

            <androidx.cardview.widget.CardView
                android:id="@+id/imgPath_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imgPath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bg_right"
                    android:contentDescription="@string/todo"
                    android:gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_load"
                    android:transitionName="@string/app_name"
                    android:visibility="visible"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtMsgTime"
                style="@style/materialText_500_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:gravity="end"
                android:textColor="@color/white"
                tools:text="11:40" />

            <ImageView
                android:id="@+id/imgMsgSeen"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/todo"
                android:padding="5dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_vector__7_" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
