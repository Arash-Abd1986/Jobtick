<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <include layout="@layout/view_bottom_sheet_top_handler" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_sheet_handler"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_alert_circle_dark_16dp"
            android:text=" Fee"
            android:textAppearance="@style/materialText_400_16"
            android:textColor="@color/textColor" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/from"
            android:textAppearance="@style/materialText_400_15"
            android:textColor="@color/textColor"
            android:text="Fee"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_fee_expl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|end"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/txt_fee"
            android:textAppearance="@style/materialText_400_15"
            android:textColor="@color/colorPrimary"
            android:text="Service fee (10%) + GST"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_fee"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rectangle_round_corners_grey"
            android:padding="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example"
                android:textAppearance="@style/materialText_400_13"
                android:textColor="@color/N300" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_service_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/example"
                android:layout_marginTop="8dp"
                android:text="Service Fee"
                android:textAppearance="@style/materialText_400_13"
                android:textColor="@color/N500" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_service_fee_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/example"
                android:layout_toEndOf="@id/txt_service_fee"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|end"
                android:layout_marginTop="8dp"
                android:text="$10"
                android:textAppearance="@style/materialText_400_15"
                android:textColor="@color/N500" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_gst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_service_fee"
                android:layout_marginTop="8dp"
                android:text="GST"
                android:textAppearance="@style/materialText_400_13"
                android:textColor="@color/N500" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_gst_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_service_fee"
                android:layout_toEndOf="@id/txt_gst"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|end"
                android:layout_marginTop="8dp"
                android:text="$1"
                android:textAppearance="@style/materialText_400_15"
                android:textColor="@color/N500" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_fee_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_gst"
                android:layout_marginTop="8dp"
                android:text="Fee"
                android:textAppearance="@style/materialText_400_15"
                android:textColor="@color/N500" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_fee_sum_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_gst"
                android:layout_toEndOf="@id/txt_gst"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|end"
                android:layout_marginTop="8dp"
                android:text="$11"
                android:textAppearance="@style/materialText_500_17"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>
