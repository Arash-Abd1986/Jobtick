<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <include layout="@layout/view_bottom_sheet_top_handler" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/job_details"
        android:textAppearance="@style/materialText_500_14"
        android:textColor="@color/textColor" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvJobTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/materialText_600_14"
        android:textColor="@color/textColor"
        tools:text="Clean my two bedroom in my apartment" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/posted_by"
        android:textAppearance="@style/materialText_500_14"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ivAvatar"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_place_holder" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPosterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/materialText_600_14"
            android:textColor="@color/textColor"
            tools:text="Ammy Stevenson" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_map_pin_blue_20dp"
        android:text="  Location"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/materialText_500_14"
        android:textColor="@color/colorPrimary" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/materialText_600_14"
        android:layout_marginTop="8dp"
        tools:text="Surfers Paradise, Australia"
        android:textColor="@color/textColor" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_clock_blue_20dp"
        android:text="  Due date"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/materialText_500_14"
        android:textColor="@color/colorPrimary" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/materialText_600_14"
        android:layout_marginTop="8dp"
        tools:text="Thu, August 12, 2020"
        android:textColor="@color/textColor" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_file_text_blue_20dp"
        android:text="  Details"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/materialText_500_14"
        android:textColor="@color/colorPrimary" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/materialText_500_14"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:text="Excepteur qui qui fugiat et esse palar voluptate exercitation esse officia cillum occaecat culpa pariatur. Nisi in ut tempor laborum are officia dolore ad occaecat. Anim a voluptate proident ea commodo qui velit officia minim."
            android:textColor="@color/textColor" />

</LinearLayout>