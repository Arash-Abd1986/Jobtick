<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_large"
        android:src="@drawable/ic_down">

    </ImageView>

    <com.jobtick.TextView.TextViewMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Job details"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_13sp" />

    <com.jobtick.TextView.TextViewSemiBold
        android:id="@+id/tvJobTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sp"
        android:layout_marginTop="@dimen/_15sp"
        android:layout_marginEnd="@dimen/_15sp"
        android:text="Clean my two bedroom in my apartment"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sp"
        android:layout_marginTop="@dimen/_10sp"
        android:layout_marginEnd="@dimen/_15sp"
        android:orientation="vertical">

        <com.jobtick.TextView.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sp"
            android:text="Posted by"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sp"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/_40sp"
                    android:layout_height="@dimen/_40sp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_place_holder" />

                <com.jobtick.TextView.TextViewSemiBold
                    android:id="@+id/tvPosterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sp"
                    android:text="Ammy Stevenson"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/_20sp"
                        android:layout_height="@dimen/_20sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_clock2" />

                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_8sp"
                        android:text="Location"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_13sp" />
                </LinearLayout>

                <com.jobtick.TextView.TextViewSemiBold
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sp"
                    android:text="Surfers Paradise, Australia"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/_20sp"
                        android:layout_height="@dimen/_20sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_map_pin" />

                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_8sp"
                        android:text="Due date"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_13sp" />
                </LinearLayout>

                <com.jobtick.TextView.TextViewSemiBold
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sp"
                    android:text="Thu, August 12, 2020"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/_20sp"
                        android:layout_height="@dimen/_20sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_file_text" />

                    <com.jobtick.TextView.TextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_8sp"
                        android:text="Details"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_13sp" />
                </LinearLayout>

                <com.jobtick.TextView.TextViewMedium
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sp"
                    android:paddingBottom="@dimen/_10sp"
                    android:text="Excepteur qui qui fugiat et esse palar voluptate exercitation esse officia cillum occaecat culpa pariatur. Nisi in ut tempor laborum are officia dolore ad occaecat. Anim a voluptate proident ea commodo qui velit officia minim."
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>