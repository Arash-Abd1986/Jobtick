<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_bank_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E2E2E2"
        android:elevation="0dp"
        android:visibility="visible"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.jobtick.TextView.TextViewMedium
                android:id="@+id/txt_account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:inputType="number"
                android:text="Address"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_14sp" />

            <com.jobtick.TextView.TextViewSemiBold
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxx street"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:orientation="horizontal">

                <com.jobtick.TextView.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="@string/suburb"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp" />

                <com.jobtick.TextView.TextViewSemiBold
                    android:id="@+id/tv_suburb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:orientation="horizontal">

                <com.jobtick.TextView.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="State"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp" />

                <com.jobtick.TextView.TextViewSemiBold
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="xxx"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:orientation="horizontal">

                <com.jobtick.TextView.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="Postcode"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp" />

                <com.jobtick.TextView.TextViewSemiBold
                    android:id="@+id/tv_postcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="xxx"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:orientation="horizontal">

                <com.jobtick.TextView.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="Country"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp" />

                <com.jobtick.TextView.TextViewSemiBold
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_billing_address"
            style="@style/materialButton.outlined"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textColor="@color/strokeRed"
            app:strokeColor="@color/strokeRed" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_billing_address"
            style="@style/materialButton.outlined"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/edit" />

    </LinearLayout>

</merge>