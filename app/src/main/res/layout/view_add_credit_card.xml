<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linear_add_credit_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_large"
    android:layout_marginEnd="@dimen/spacing_large"
    android:layout_marginBottom="@dimen/spacing_large"
    android:layout_marginTop="28dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:elevation="0dp"
        android:visibility="visible"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4D576A"
            android:padding="16dp">


            <com.jobtick.TextView.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Mastercard"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_master_card" />


            <com.jobtick.TextView.TextViewMedium
                android:id="@+id/credit_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/credit_account_name"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:text="**** **** **** 1234"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />


            <com.jobtick.TextView.TextViewMedium
                android:id="@+id/credit_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="Mahan Sharif"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/delete_payment_card"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_weight="1"
            android:backgroundTint="@color/colorDeclineRed"
            app:cardCornerRadius="@dimen/buttonCorners">

            <com.jobtick.TextView.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/edit_payment_card"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_weight="1"
            android:background="@drawable/bg_border_btn_blue">

            <com.jobtick.TextView.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/edit"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>