<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:elevation="0dp"
        android:visibility="visible"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4D576A"
            android:padding="16dp">


            <com.jobtick.TextView.TextViewMedium
                android:id="@+id/card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Mastercard"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_master_card" />


            <com.jobtick.TextView.TextViewMedium
                android:id="@+id/credit_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/credit_expiry_date"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:text="**** **** **** 1234"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />


            <com.jobtick.TextView.TextViewMedium
                android:id="@+id/credit_expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="User"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_card"
        style="@style/materialButton.outlined"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="@string/delete_credit_card"
        app:strokeColor="@color/strokeRed"
        android:textColor="@color/strokeRed"/>
</merge>