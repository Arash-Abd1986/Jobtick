<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@id/counter"
        android:focusable="false"
        android:text="First Name"
        android:textAppearance="@style/materialText_W400_12"
        android:textColor="@color/N100" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/counter"
        style="@style/materialText_W400_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="0/100"
        android:gravity="end|center_vertical"
        android:textColor="@color/N050" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/suburb_icon"
        style="@style/materialText_400_13"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:srcCompat="@drawable/inset_suburb"
        android:gravity="end|center_vertical"
         />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_gravity="top"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:scrollHorizontally="true"
        android:background="@null"
        android:gravity="top"
        android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
        android:minLines="1"
        android:maxLines="10"
        android:textAppearance="@style/materialText_W400_14"
        android:textColor="@color/textColor"
        tools:text="sedighi.66@gmail.com" />


</merge>