<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_toStartOf="@id/counter"
            android:focusable="false"
            android:text="First Name"
            android:textAppearance="@style/materialText_W400_12"
            android:textColor="@color/N100" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/counter"
            style="@style/materialText_W400_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="end|center_vertical"
            android:text="0/100"
            android:textColor="@color/N050" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/suburb_icon"
            style="@style/materialText_400_13"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="end|center_vertical"
            android:visibility="gone"
            app:srcCompat="@drawable/inset_suburb" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@null"
            android:gravity="top"
            android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
            android:maxLines="10"
            android:minLines="1"
            android:scrollHorizontally="true"
            android:textAppearance="@style/materialText_W400_14"
            android:textColor="@color/textColor"
            tools:text="sedighi.66@gmail.com" />


    </RelativeLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_main"
        android:layout_marginTop="4dp"
        android:focusable="false"
        android:text="ewcwecdwecw"
        android:textAppearance="@style/materialText_W400_12"
        android:textColor="@color/R400"
        android:visibility="visible" />
</RelativeLayout>