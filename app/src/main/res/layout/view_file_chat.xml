<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">
    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/view_file_chat_imgPath"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_load"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cornerRadius="4dp" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/view_file_chat_txtShowMessage"
        style="@style/materialText_500_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/view_file_chat_imgPath"
        android:gravity="start"
        android:lines="2"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/N900"
        tools:text="sf;kjglksfjglksgjlskjglskfgjksj.gjdsjhhjdsghshgjdsfghsghsghgksjhgksghlgs;l;g;lsl;gsksjg" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_size"
        style="@style/materialText_500_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_file_chat_txtShowMessage"
        android:layout_toEndOf="@id/view_file_chat_imgPath"
        android:gravity="start"
        android:lines="2"
        android:textSize="13sp"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="12dp"
        android:textColor="@color/N600"
        tools:text="sf;kjgksjg" />


    <LinearLayout
        android:id="@+id/lin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/view_file_chat_txtMsgTime"
            style="@style/materialText_500_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:gravity="end"
            android:textSize="13sp"
            android:textColor="@color/N900"
            tools:text="11:40" />

        <ImageView
            android:id="@+id/view_file_chat_doubleTick"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/todo"
            android:padding="5dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_vector__7_" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tx_chat_file"
        android:layout_below="@+id/view_file_chat_imgPath"
        style="@style/materialText_500_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_toLeftOf="@+id/lin_time"
        android:paddingTop="@dimen/_8dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/N900"
        android:text=""
        tools:text="sf;kjglksfjglksgjlskjglskfgjksj.gjdsjhhjdsghshgjdsfghsghsghgksjhgksghlgs;l;g;lsl;gsksjg" />

</RelativeLayout>