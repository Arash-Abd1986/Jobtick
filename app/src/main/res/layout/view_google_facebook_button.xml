<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <com.jobtick.android.text_view.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- OR -"
        android:layout_marginTop="10dp"
        android:textColor="@color/grey_70"
        android:textSize="@dimen/_12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/buttonCorners"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/lyt_btn_google"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:gravity="fill"
                android:background="@drawable/rectangle_card_round_corners_outlined_n900">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="40dp"
                    android:drawableStart="@drawable/ic_google"
                    android:gravity="center_vertical|center"
                    android:text="Sign up with Google"
                    android:textAppearance="@style/materialText_500_14"
                    android:textColor="@color/textColor" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/buttonCorners"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/lyt_btn_facebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rectangle_card_round_corners_outlined_n900">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvFB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="40dp"
                    android:drawableStart="@drawable/ic_facebook"
                    android:gravity="center_vertical|center"
                    android:text="Sign up with Facebook"
                    android:textAppearance="@style/materialText_500_14"
                    android:textColor="@color/textColor" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
