<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginRight="5dp"
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:background="@color/N050"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/other"
            android:layout_centerVertical="true"
            android:layout_height="1dp"/>
        <com.jobtick.android.text_view.TextViewRegular
            android:id="@+id/other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/or_sign_up_with"
            android:textColor="@color/grey_70"
            android:textSize="@dimen/_12sp" />
        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:background="@color/N050"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/other"
            android:layout_centerVertical="true"
            android:layout_height="1dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/buttonCorners"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/lyt_btn_google"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:background="@drawable/rectangle_card_round_corners_outlined_n900"
                android:gravity="fill">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="40dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_google"
                    android:gravity="center_vertical|center"
                    android:text="@string/sign_up_with_google"
                    android:textAppearance="@style/materialText_500_14"
                    android:textColor="#4D576A" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/buttonCorners"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/lyt_btn_facebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_card_round_corners_outlined_n900"
                android:gravity="center">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvFB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="40dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_facebook"
                    android:gravity="center_vertical|center"
                    android:text="@string/sign_up_with_facebook"
                    android:textAppearance="@style/materialText_500_14"
                    android:textColor="#4D576A" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
